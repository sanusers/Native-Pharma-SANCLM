<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/thin_gray_stroke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/nameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:id="@+id/iconName"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/tp_dr_icon" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@id/iconName"
                android:fontFamily="@font/satoshi_medium"
                android:text="Ram Kumar"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/_6sdp"
                tools:ignore="SpUsage" />

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/nameLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="#ededed" />

        <RelativeLayout
            android:id="@id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_3sdp">

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/visitTimeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:fontFamily="@font/satoshi_medium"
                        android:text="Visit Time"
                        android:textColor="@color/text_dark_65"
                        android:textSize="@dimen/_5sdp"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/visitTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/visitTimeTxt"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/satoshi_medium"
                        android:text=""
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/_5sdp"
                        tools:ignore="SpUsage" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/modifyTimeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:fontFamily="@font/satoshi_medium"
                        android:text="Modified Time"
                        android:textColor="@color/text_dark_65"
                        android:textSize="@dimen/_5sdp"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/modifyTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/modifyTimeTxt"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/satoshi_medium"
                        android:text=""
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/_5sdp"
                        tools:ignore="SpUsage" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/clusterTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:fontFamily="@font/satoshi_medium"
                        android:text="Cluster"
                        android:textColor="@color/text_dark_65"
                        android:textSize="@dimen/_5sdp"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/cluster"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/clusterTxt"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/satoshi_medium"
                        android:text=""
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/_5sdp"
                        tools:ignore="SpUsage" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/pobTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:fontFamily="@font/satoshi_medium"
                        android:text="POB"
                        android:textColor="@color/text_dark_65"
                        android:textSize="@dimen/_5sdp"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/pob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pobTxt"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/satoshi_medium"
                        android:text=""
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/_5sdp"
                        tools:ignore="SpUsage" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/feedbackTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:fontFamily="@font/satoshi_medium"
                        android:text="Feedback"
                        android:textColor="@color/text_dark_65"
                        android:textSize="@dimen/_5sdp"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/feedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/feedbackTxt"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/satoshi_medium"
                        android:text=""
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/_5sdp"
                        tools:ignore="SpUsage" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/ll1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:background="#ededed" />

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/jointWorkTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:fontFamily="@font/satoshi_medium"
                        android:text="Joint Work"
                        android:textColor="@color/text_dark_65"
                        android:textSize="@dimen/_5sdp"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/jointWork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/jointWorkTxt"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/satoshi_medium"
                        android:text=""
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/_5sdp"
                        tools:ignore="SpUsage" />

                </RelativeLayout>

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="#ededed" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/nextVisitTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:fontFamily="@font/satoshi_medium"
                        android:text="Next Visit date"
                        android:textColor="@color/text_dark_65"
                        android:textSize="@dimen/_5sdp"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/nextVisit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nextVisitTxt"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/satoshi_medium"
                        android:text=""
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/_5sdp"
                        tools:ignore="SpUsage" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/expandLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true">

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="#ededed" />

                <LinearLayout
                    android:id="@+id/checkInOutLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view3"
                    android:visibility="gone"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/checkIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center"
                            android:fontFamily="@font/satoshi_medium"
                            android:text="Check IN time &amp; Location"
                            android:textColor="@color/text_dark_65"
                            android:textSize="@dimen/_5sdp"
                            tools:ignore="SpUsage" />

                        <LinearLayout
                            android:id="@+id/checkInLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/checkIn"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/checkInTime"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:fontFamily="@font/satoshi_medium"
                                android:gravity="bottom"
                                android:text=""
                                android:textColor="@color/text_dark"
                                android:textSize="@dimen/_5sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/checkInMarker"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:drawablePadding="@dimen/_5sdp"
                                android:fontFamily="@font/satoshi_medium"
                                android:gravity="bottom|start"
                                android:text="View"
                                android:textColor="@color/pink"
                                android:textSize="@dimen/_5sdp"
                                app:drawableStartCompat="@drawable/marker_geo_approval"
                                tools:ignore="SpUsage" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/inAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/checkInLayout"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/satoshi_medium"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/_5sdp"
                            android:visibility="visible"
                            tools:ignore="SpUsage" />

                    </RelativeLayout>

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="#ededed" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/checkOut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center"
                            android:fontFamily="@font/satoshi_medium"
                            android:text="Check Out time &amp; Location"
                            android:textColor="@color/text_dark_65"
                            android:textSize="@dimen/_5sdp"
                            tools:ignore="SpUsage" />

                        <LinearLayout
                            android:id="@+id/checkOutLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/checkOut"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/checkOutTime"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:fontFamily="@font/satoshi_medium"
                                android:gravity="bottom"
                                android:text=""
                                android:textColor="@color/text_dark"
                                android:textSize="@dimen/_5sdp"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/checkOutMarker"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:drawableStart="@drawable/marker_geo_approval"
                                android:drawablePadding="@dimen/_5sdp"
                                android:fontFamily="@font/satoshi_medium"
                                android:gravity="bottom|start"
                                android:text="View"
                                android:textColor="@color/pink"
                                android:textSize="@dimen/_5sdp"
                                tools:ignore="SpUsage" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/outAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/checkOutLayout"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/satoshi_medium"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/_5sdp"
                            android:visibility="visible"
                            tools:ignore="SpUsage" />

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@id/checkInOutLayout"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="#ededed"
                    android:visibility="visible" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/productLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view4"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tag_sample_prd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="@font/satoshi_medium"
                        android:paddingHorizontal="@dimen/_4sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:text="@string/products"
                        android:textColor="@color/light_grey_2"
                        android:textSize="@dimen/_5ssp"
                        app:layout_constraintBottom_toTopOf="@id/constraint_tag_sample_prd"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint_tag_sample_prd"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/_6sdp"
                        android:background="@drawable/bg_light_grey_1"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_1sdp"
                        app:layout_constraintBottom_toTopOf="@id/rv_sample_prd"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tag_sample_prd">

                        <TextView
                            android:id="@+id/tag_prd_name"
                            android:layout_width="@dimen/_78sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_1sdp"
                            android:fontFamily="@font/satoshi_bold"
                            android:paddingHorizontal="@dimen/_4sdp"
                            android:paddingVertical="@dimen/_3sdp"
                            android:text="@string/product_name"
                            android:textColor="@color/dark_purple"
                            android:textSize="@dimen/_5ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tag_promoted"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintHorizontal_chainStyle="spread_inside"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tag_promoted"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_1sdp"
                            android:fontFamily="@font/satoshi_bold"
                            android:paddingHorizontal="@dimen/_4sdp"
                            android:paddingVertical="@dimen/_3sdp"
                            android:text="@string/promoted"
                            android:textColor="@color/dark_purple"
                            android:textSize="@dimen/_5ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tag_stock"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/tag_prd_name"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_editor_absoluteY="@dimen/_1sdp" />


                        <TextView
                            android:id="@+id/tag_stock"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_1sdp"
                            android:fontFamily="@font/satoshi_bold"
                            android:paddingHorizontal="@dimen/_4sdp"
                            android:paddingVertical="@dimen/_3sdp"
                            android:text="@string/stock"
                            android:textColor="@color/dark_purple"
                            android:textSize="@dimen/_5ssp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tag_samples"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/tag_promoted"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_editor_absoluteY="@dimen/_1sdp" />

                        <TextView
                            android:id="@+id/tag_samples"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_1sdp"
                            android:fontFamily="@font/satoshi_bold"
                            android:paddingHorizontal="@dimen/_4sdp"
                            android:paddingVertical="@dimen/_3sdp"
                            android:text="@string/samples"
                            android:textColor="@color/dark_purple"
                            android:textSize="@dimen/_5ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tag_rx_qty"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/tag_stock"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_editor_absoluteY="@dimen/_1sdp" />

                        <TextView
                            android:id="@+id/tag_rx_qty"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_1sdp"
                            android:fontFamily="@font/satoshi_bold"
                            android:paddingHorizontal="@dimen/_4sdp"
                            android:paddingVertical="@dimen/_3sdp"
                            android:text="@string/rx_qty"
                            android:textColor="@color/dark_purple"
                            android:textSize="@dimen/_5ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tag_rcpa_prd"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/tag_samples"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_editor_absoluteY="@dimen/_1sdp" />

                        <TextView
                            android:id="@+id/tag_rcpa_prd"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_1sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:fontFamily="@font/satoshi_bold"
                            android:paddingHorizontal="@dimen/_4sdp"
                            android:paddingVertical="@dimen/_3sdp"
                            android:text="@string/rcpa"
                            android:textColor="@color/dark_purple"
                            android:textSize="@dimen/_5ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
