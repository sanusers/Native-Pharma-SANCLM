<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/leave_side"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.leave.Leave_Application">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F4F4">

        <RelativeLayout
            android:id="@+id/toolbarheaddcr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/text_dark"
                    android:backgroundTint="@color/text_dark"
                    android:minHeight="?attr/actionBarSize"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp">

                    <LinearLayout
                        android:id="@+id/backArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_6sdp">

                        <ImageView
                            android:id="@+id/back_btn"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/arrow_back_white" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:fontFamily="@font/satoshi_variable"
                        android:text="Leave Application"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        tools:ignore="SpUsage" />

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.AppBarLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbarheaddcr"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="35"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical"
                        android:weightSum="90">

                        <LinearLayout
                            android:id="@+id/Leave"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="55"
                            android:background="@drawable/border_white"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:orientation="vertical"
                                android:padding="@dimen/_4sdp">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_2sdp"
                                    android:background="@color/white"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">


                                        <TextView
                                            android:id="@+id/Head_fromdate"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/_1sdp"
                                            android:layout_weight="1"
                                            android:gravity="left"
                                            android:textSize="@dimen/_7sdp"
                                            android:textStyle="bold" />


                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.06" />

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">


                                        <TextView
                                            android:id="@+id/Head_todate"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/_3sdp"
                                            android:layout_weight="1"
                                            android:gravity="left"

                                            android:textSize="@dimen/_7sdp"
                                            android:textStyle="bold" />


                                    </RelativeLayout>
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:layout_marginRight="@dimen/_4sdp"
                                    android:orientation="horizontal">


                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:layout_marginRight="@dimen/_2sdp"
                                        android:layout_weight="1"
                                        android:background="@drawable/square_box">


                                        <TextView
                                            android:id="@+id/et_from_date"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/_2sdp"
                                            android:layout_weight="1"
                                            android:gravity="left"
                                            android:hint="From Date"
                                            android:textColor="#282A3C"
                                            android:fontFamily="@font/satoshi_medium"
                                            android:padding="@dimen/_6sdp"
                                            android:textSize="@dimen/_7sdp" />


                                        <ImageView
                                            android:layout_width="@dimen/_10sdp"
                                            android:layout_height="@dimen/_13sdp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerInParent="true"
                                            android:layout_marginRight="@dimen/_6sdp"
                                            android:src="@drawable/calendar_img" />

                                    </RelativeLayout>


                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".05" />

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:layout_marginRight="@dimen/_2sdp"
                                        android:layout_weight="1"
                                        android:background="@drawable/square_box">

                                        <TextView
                                            android:id="@+id/et_to_date"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/_1sdp"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/satoshi_medium"
                                            android:gravity="left"
                                            android:hint="To Date "
                                            android:textColor="#282A3C"

                                            android:padding="@dimen/_6sdp"
                                            android:textSize="@dimen/_7sdp" />

                                        <ImageView
                                            android:layout_width="@dimen/_10sdp"
                                            android:layout_height="@dimen/_13sdp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_centerInParent="true"
                                            android:layout_marginRight="13dp"
                                            android:src="@drawable/calendar_img" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:orientation="vertical"
                                android:padding="@dimen/_4sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_2sdp"
                                    android:layout_marginRight="@dimen/_2sdp"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/Head_Ltype"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="left"
                                            android:textSize="@dimen/_7sdp"
                                            android:textStyle="bold" />
                                    </RelativeLayout>


                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.06" />

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/et_to_"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/_1sdp"
                                            android:layout_weight="1"
                                            android:gravity="left"
                                            android:padding="2dp"
                                            android:text="Attachment"
                                            android:textColor="#85929e"
                                            android:textSize="@dimen/_7sdp"
                                            android:textStyle="bold"
                                            android:visibility="visible"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_1sdp"
                                            android:gravity="right"
                                            android:hint="Max file size 2MB"
                                            android:textSize="@dimen/_6sdp"
                                            android:visibility="visible"/>
                                    </RelativeLayout>
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_1sdp"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:layout_marginRight="@dimen/_1sdp"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@drawable/square_box">

                                        <TextView
                                            android:id="@+id/Leave_Type"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/_1sdp"
                                            android:layout_weight="1"
                                            android:focusable="false"
                                            android:textColor="#282A3C"
                                            android:focusableInTouchMode="true"
                                            android:fontFamily="@font/satoshi_medium"
                                            android:gravity="left"

                                            android:hint="Select Leave Type"
                                            android:longClickable="false"
                                            android:padding="@dimen/_6sdp"
                                            android:textSize="@dimen/_7sdp" />

                                        <ImageView
                                            android:id="@+id/che_arrow"
                                            android:layout_width="@dimen/_7sdp"
                                            android:layout_height="17dp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerInParent="true"
                                            android:layout_marginRight="13dp"
                                            android:src="@drawable/arrow_down" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.07" />

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@drawable/border_editext">

                                        <TextView
                                            android:id="@+id/txt_Attachement"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="2.5dp"
                                            android:layout_weight="1"
                                            android:hint="Choose file to Upload "
                                            android:padding="@dimen/_6sdp"
                                            android:textSize="@dimen/_7sdp"
                                            android:visibility="visible" />

                                        <ImageView
                                            android:id="@+id/che"
                                            android:layout_width="@dimen/_9sdp"
                                            android:layout_height="@dimen/_10sdp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerInParent="true"
                                            android:layout_marginRight="@dimen/_6sdp"
                                            android:src="@drawable/upload1"
                                            android:visibility="visible" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:orientation="vertical"
                                android:padding="@dimen/_2sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginEnd="@dimen/_1sdp"
                                                android:layout_weight=".5"
                                                android:gravity="left"
                                                android:text="Reason for Leave"
                                                android:textColor="#85929e"
                                                android:textSize="@dimen/_7sdp"
                                                android:textStyle="bold" />

                                            <EditText
                                                android:id="@+id/ed_Reason"
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/_50sdp"
                                                android:layout_marginTop="@dimen/_4sdp"
                                                android:layout_marginEnd="@dimen/_1sdp"
                                                android:background="@drawable/square_box"
                                                android:gravity="top|left"
                                                android:hint="Remarks"
                                                android:lines="8"
                                                android:maxLines="10"
                                                android:minLines="6"
                                                android:padding="@dimen/_3sdp"
                                                android:textSize="@dimen/_8sdp" />
                                        </LinearLayout>
                                    </RelativeLayout>


                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.07" />

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginEnd="@dimen/_1sdp"
                                                android:layout_weight=".5"
                                                android:gravity="left"
                                                android:text="Address on Leave"
                                                android:textColor="#85929e"
                                                android:textSize="@dimen/_7sdp"
                                                android:textStyle="bold" />

                                            <EditText
                                                android:id="@+id/ed_Address"
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/_50sdp"
                                                android:layout_marginTop="@dimen/_4sdp"
                                                android:layout_marginEnd="@dimen/_1sdp"
                                                android:background="@drawable/square_box"
                                                android:gravity="top|left"
                                                android:hint="Remarks"
                                                android:lines="8"
                                                android:maxLines="10"
                                                android:minLines="6"
                                                android:padding="@dimen/_3sdp"
                                                android:textSize="@dimen/_8sdp"/>
                                        </LinearLayout>
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/mtcard"
                            android:layout_marginTop="-2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fdfefe"
                            android:layout_weight="35"
                            android:visibility="gone"

                            />




                        <LinearLayout
                            android:id="@+id/chart_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_weight="35"
                            android:background="@drawable/border_white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:layout_marginRight="@dimen/_1sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:padding="@dimen/_1sdp">

                                        <TextView
                                            android:id="@+id/et_te"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_4sdp"
                                            android:paddingBottom="@dimen/_2sdp"
                                            android:layout_marginEnd="@dimen/_1sdp"
                                            android:fontFamily="@font/satoshi_medium"
                                            android:gravity="left"
                                            android:text="Leave Taken"
                                            android:textColor="#282A3C"
                                            android:textSize="@dimen/_8sdp"
                                            android:textStyle="bold" />

                                    </LinearLayout>


                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_1sdp"
                                        android:layout_marginBottom="@dimen/_1sdp">

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/RL_piechart"
                                            android:scrollbars="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                        </androidx.recyclerview.widget.RecyclerView>

                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_weight="65"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/submit_ldetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:background="@drawable/blue_squarebox"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp"
                        android:weightSum="2">

                        <!--                    sidcard-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:orientation="vertical"
                            android:weightSum="100">
                            <!--                       headline-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:layout_marginBottom="@dimen/_1sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Your Leave Request includes"
                                    android:padding="@dimen/_1sdp"
                                    android:textSize="@dimen/_7sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <!--leave details-->
                            <LinearLayout
                                android:id="@+id/leave_request"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="96"
                                android:background="#d6eaf8"
                                android:paddingBottom="@dimen/_8sdp"
                                android:orientation="vertical">


                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/leave_details"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/line"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_1sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_2sdp"
                                    android:background="#282A3CA6"
                                    android:orientation="vertical"
                                    android:padding=".5dp"
                                    android:weightSum="2" />

                                <TextView
                                    android:id="@+id/l_days"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/satoshi_medium"
                                    android:textColor="#282A3C"
                                    android:layout_weight="1"
                                    android:textSize="@dimen/_7sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/balance_days"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_marginBottom="@dimen/_1sdp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/satoshi_medium"
                                    android:padding="@dimen/_2sdp"
                                    android:text=""
                                    android:textColor="#566573"
                                    android:textSize="@dimen/_6sdp" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/submit_ldetails"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_weight="0.1"
                        android:gravity="bottom"
                        android:paddingBottom="@dimen/_1sdp">

                        <Button
                            android:id="@+id/submit_leave"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/submit_button"
                            android:fontFamily="@font/satoshi_bold"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:text="Submit"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8sdp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <include
        layout="@layout/side_screen" />


</androidx.drawerlayout.widget.DrawerLayout>





































