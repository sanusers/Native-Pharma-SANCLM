<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround_graey"
    tools:context=".activity.homeScreen.HomeDashBoard">

    <RelativeLayout
        android:id="@+id/Relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black"
            android:padding="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/back_arrow"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_toRightOf="@+id/back_arrow"
                    android:fontFamily="@font/satoshi_variable"
                    android:gravity="left"
                    android:text="SAN Media Pvt Ltd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp" />


                <ImageView
                    android:id="@+id/img_notofication"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_toLeftOf="@id/img_sync"
                    android:src="@drawable/notification" />


                <ImageView
                    android:id="@+id/img_sync"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_toLeftOf="@id/img_account"
                    android:src="@drawable/sync_img" />


                <ImageView
                    android:id="@+id/img_account"

                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:src="@drawable/acount_img" />

                <RelativeLayout
                    android:id="@+id/img_account1"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_below="@+id/img_account"
                    android:background="@drawable/triangle_view" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>


    <androidx.drawerlayout.widget.DrawerLayout

        android:id="@+id/my_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Relative_layout"
        tools:context=".activity.DashBoard.HomeDashBoard">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_weight="1.8"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_date_layoout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:background="@drawable/custom_backround_layout"
                    android:backgroundTint="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/caleder_img"
                        android:layout_width="@dimen/_9sdp"
                        android:layout_height="@dimen/_9sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/calendar_img" />

                    <TextView
                        android:id="@+id/text_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/satoshi_medium"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="Select Date"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/_9sdp"
                        android:layout_height="@dimen/_9sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/arrow_bot_top_img" />
                </RelativeLayout>

                <include
                    android:id="@+id/tab_layout"
                    layout="@layout/customize_tablayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_4sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:background="@drawable/backround_text"
                    android:backgroundTint="@color/white" />


                    <include
                        android:id="@+id/view_calerder_layout"
                        layout="@layout/call_status_calender_layout"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:visibility="gone"
                        android:layout_height="match_parent"
                      />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <saneforce.sanclm.activity.homeScreen.adapters.CustomViewPager
                        android:id="@+id/view_pager1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/white" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_quick_link"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_weight="5">

                    <TextView
                        android:id="@+id/txt_quik_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/satoshi_medium"
                        android:text="Quick Link"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/txt_quik_link">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:orientation="horizontal"
                            android:radius="12dp">

                            <LinearLayout
                                android:id="@+id/ll_presentation"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:background="@drawable/backround_text"
                                android:backgroundTint="#c6eae1"
                                android:orientation="horizontal"
                                android:padding="@dimen/_2sdp">

                                <ImageView
                                    android:layout_width="@dimen/_9sdp"
                                    android:layout_height="@dimen/_9sdp"
                                    android:layout_gravity="center|left"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:src="@drawable/image_img" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/satoshi_medium"
                                    android:gravity="left"
                                    android:text="Presentation"
                                    android:textColor="@color/black_45"
                                    android:textSize="@dimen/_7sdp" />

                                <ImageView
                                    android:layout_width="@dimen/_8sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|right"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:src="@drawable/arrow_right_" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_slide"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_2sdp"
                                android:background="@drawable/backround_text"
                                android:backgroundTint="#d3e4ef"
                                android:orientation="horizontal"
                                android:padding="@dimen/_2sdp">

                                <ImageView
                                    android:layout_width="@dimen/_9sdp"
                                    android:layout_height="@dimen/_9sdp"
                                    android:layout_gravity="center|left"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:src="@drawable/eye_img" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/satoshi_medium"
                                    android:gravity="left"
                                    android:text="Preview"
                                    android:textColor="@color/black_45"
                                    android:textSize="@dimen/_7sdp">

                                </TextView>

                                <ImageView
                                    android:layout_width="@dimen/_8sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|right"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:src="@drawable/arrow_right_">

                                </ImageView>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_report"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_2sdp"
                                android:background="@drawable/backround_text"
                                android:backgroundTint="#f2d7db"
                                android:orientation="horizontal"
                                android:padding="@dimen/_2sdp">

                                <ImageView
                                    android:layout_width="@dimen/_9sdp"
                                    android:layout_height="@dimen/_9sdp"
                                    android:layout_gravity="center|left"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:src="@drawable/file_chart_img" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|left"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/satoshi_medium"
                                    android:gravity="left"
                                    android:text="Report"
                                    android:textColor="@color/black_45"
                                    android:textSize="@dimen/_7sdp">

                                </TextView>

                                <ImageView
                                    android:layout_width="@dimen/_8sdp"
                                    android:layout_height="@dimen/_8sdp"
                                    android:layout_gravity="center|right"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:src="@drawable/arrow_right_">

                                </ImageView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_analys"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:background="@drawable/backround_text"
                                android:backgroundTint="#26FFEB3B"
                                android:orientation="horizontal"
                                android:padding="@dimen/_2sdp">

                                <ImageView
                                    android:layout_width="@dimen/_9sdp"
                                    android:layout_height="@dimen/_9sdp"
                                    android:layout_gravity="center|left"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:src="@drawable/image_img" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|left"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/satoshi_medium"
                                    android:gravity="left"
                                    android:text="Analysis"
                                    android:textColor="@color/black_45"
                                    android:textSize="@dimen/_7sdp" />

                                <ImageView
                                    android:layout_width="@dimen/_8sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|right"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:src="@drawable/arrow_right_">

                                </ImageView>

                            </LinearLayout>

                        </LinearLayout>
                    </HorizontalScrollView>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>


        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@drawable/background_navicationview"
            android:foregroundGravity="center"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            app:itemBackground="@drawable/drawer_item_bg"
            app:itemIconSize="@dimen/_10sdp"
            app:itemTextAppearance="@style/CustomNavDrawerItemTextStyle"
            app:itemTextColor="@color/black_45"
            app:menu="@menu/activity_navigation_drawer_drawer" />

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/background_navicationview"
            android:foregroundGravity="center"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            app:itemBackground="@drawable/drawer_item_bg"
            app:itemIconSize="@dimen/_10sdp"
            app:itemTextAppearance="@style/CustomNavDrawerItemTextStyle"
            app:itemTextColor="@color/black_45">

            <ListView
                android:id="@+id/wk_list_view"
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                />
            <ListView
                android:id="@+id/cl_list_view"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content"
                />
            <ListView
                android:id="@+id/hqlist_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>


</RelativeLayout>