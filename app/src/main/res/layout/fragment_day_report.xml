<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_6sdp"
    android:background="@color/background"
    tools:context=".activity.reports.dayReport.fragment.DayReportFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/calender"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/black_stroke">

            <TextView
                android:id="@+id/date"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_6sdp"
                android:textColor="@color/text_dark"
                android:fontFamily="@font/satoshi_medium"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                tools:ignore="SpUsage"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_stroke"
                android:backgroundTint="@color/text_dark"
                android:layout_margin="@dimen/_1sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/calendar_img"
                    android:layout_gravity="center"
                    android:padding="@dimen/_4sdp"
                    app:tint="@color/white"
                    android:background="@color/text_dark" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_5sdp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edittext_stroke"
                android:backgroundTint="@color/white">

                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:src="@drawable/search_icon_gray"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:layout_marginStart="@dimen/_5sdp"/>

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/searchET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Search"
                    android:textColorHint="@color/text_dark_65"
                    android:textSize="@dimen/_6sdp"
                    android:textColor="@color/text_dark_65"
                    android:singleLine="true"
                    android:background="@null"
                    android:gravity="start|center"
                    android:padding="@dimen/_5sdp"
                    android:imeOptions="actionDone"
                    tools:ignore="SpUsage"/>

                <LinearLayout
                    android:id="@+id/searchClearIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_8sdp"
                        android:src="@drawable/img_close"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:scaleType="centerInside" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sortIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/black_stroke"
                android:backgroundTint="@color/text_dark"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/report_sort_icon"
                    app:tint="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dayReportRecView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="8dp"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/noReportFoundTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No Reports Found!"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/text_dark"
        android:fontFamily="@font/satoshi_medium"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_3sdp"
        android:visibility="gone"
        tools:ignore="SpUsage"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="@color/text_dark"
        android:layout_centerInParent="true"/>

</RelativeLayout>