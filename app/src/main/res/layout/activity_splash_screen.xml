<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlHead"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.splash.SplashScreen"
    android:background="@drawable/splash_screen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/splash_bkn2">
        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/triAngle"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_21sdp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/yellow_triangle"
            app:layout_constraintStart_toEndOf="@+id/view1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <View
            android:id="@+id/view2"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/microScopeImg"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/micro_scope"
            app:layout_constraintEnd_toStartOf="@+id/view2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="120dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <View
            android:id="@+id/conicalImg"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/conical"
            android:layout_marginBottom="40dp"
            app:layout_constraintStart_toStartOf="@+id/microScopeImg"
            app:layout_constraintEnd_toEndOf="@+id/microScopeImg"
            app:layout_constraintTop_toBottomOf="@+id/microScopeImg"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/splashImg"
            android:layout_width="0dp"
            android:layout_height="@dimen/_210sdp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/animation_slide"
            app:layout_constraintEnd_toStartOf="@+id/microScopeImg"
            app:layout_constraintStart_toEndOf="@id/triAngle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        </pl.droidsonroids.gif.GifImageView>



    </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

