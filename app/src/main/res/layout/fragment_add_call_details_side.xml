<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_dummy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7A000000"
        android:enabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/constraint_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/constraint_main"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/tv_tag_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:fontFamily="@font/satoshi_bold"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_4sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:text="@string/add_prd_inp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/view_dummy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:src="@drawable/img_close"
            app:layout_constraintBottom_toBottomOf="@id/tv_tag_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/tv_tag_header"
            app:layout_constraintTop_toTopOf="@id/tv_tag_header">

        </ImageView>

        <View
            android:id="@+id/view_dummy"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/dark_purple"
            app:layout_constraintBottom_toTopOf="@id/tab_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tag_header"
            app:layout_constraintVertical_bias="0.5" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:maxWidth="@dimen/_40sdp"
            app:layout_constraintBottom_toTopOf="@id/view_dummy_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_dummy"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/dark_purple"
            app:tabMode="scrollable"
            app:tabPaddingEnd="@dimen/_1sdp"
            app:tabPaddingStart="@dimen/_1sdp"
            app:tabSelectedTextColor="@color/dark_purple"
            app:tabTextAppearance="@style/tab_text_one"
            app:tabTextColor="@color/bg_txt_color" />

        <View
            android:id="@+id/view_dummy_2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:background="@color/bg_txt_color"
            app:layout_constraintBottom_toTopOf="@id/constraint_main_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tab_layout"
            app:layout_constraintVertical_bias="0.0" />

        <saneforce.sanclm.commonClasses.VerticalScrollview
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/btn_save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_dummy_2"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_main_input"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_2sdp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/btn_save"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_dummy_2"
                    app:layout_constraintVertical_bias="0.0">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint_header_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@id/rv_add_inputs_additional"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0">

                        <TextView
                            android:id="@+id/tag_input_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:fontFamily="@font/satoshi_bold"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:text="@string/input"
                            android:textColor="@color/bg_txt_color"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tag__input_stock"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintHorizontal_chainStyle="spread"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tag__input_stock"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_2sdp"
                            android:fontFamily="@font/satoshi_bold"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:text="@string/stock"
                            android:textColor="@color/bg_txt_color"
                            android:textSize="14sp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@id/tag_input_name"
                            app:layout_constraintEnd_toStartOf="@+id/tag_qty"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/tag_input_name"
                            app:layout_constraintTop_toTopOf="@id/tag_input_name"
                            tools:layout_editor_absoluteY="2dp" />

                        <TextView
                            android:id="@+id/tag_qty"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:fontFamily="@font/satoshi_bold"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:text="@string/qty"
                            android:textColor="@color/bg_txt_color"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@id/tag_input_name"
                            app:layout_constraintEnd_toStartOf="@+id/tag_dummy"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/tag__input_stock"
                            app:layout_constraintTop_toTopOf="@id/tag_input_name"
                            tools:layout_editor_absoluteY="2dp" />

                        <TextView
                            android:id="@+id/tag_dummy"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:paddingVertical="@dimen/_3sdp"
                            android:layout_marginHorizontal="@dimen/_2sdp"
                            android:fontFamily="@font/satoshi_bold"
                            app:layout_constraintBottom_toBottomOf="@id/tag_input_name"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/tag_qty"
                            app:layout_constraintTop_toTopOf="@id/tag_input_name"
                            tools:layout_editor_absoluteY="2dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_add_inputs_additional"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toTopOf="@id/btn_save"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/constraint_header_input"
                        app:layout_constraintVertical_bias="0.0" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btn_add_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/bg_green_dot"
                        android:drawableStart="@drawable/iv_add"
                        android:fontFamily="@font/satoshi_bold"
                        android:paddingVertical="@dimen/_3sdp"
                        android:paddingStart="10dp"
                        android:paddingEnd="15dp"
                        android:text="@string/add_input"
                        android:textColor="@color/green_2"
                        android:textSize="16sp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rv_add_inputs_additional"
                        app:layout_constraintVertical_bias="0.0" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_main_sample"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_2sdp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toTopOf="@id/btn_save"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_dummy_2"
                    app:layout_constraintVertical_bias="0.0">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint_header_sample"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0">

                        <TextView
                            android:id="@+id/tag_sample_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:fontFamily="@font/satoshi_bold"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:text="@string/product"
                            android:textColor="@color/bg_txt_color"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tag_sam_stock"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintHorizontal_chainStyle="spread"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_editor_absoluteY="2dp" />

                        <TextView
                            android:id="@+id/tag_sam_stock"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_2sdp"
                            android:fontFamily="@font/satoshi_bold"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:text="@string/stock"
                            android:textColor="@color/bg_txt_color"
                            android:textSize="14sp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@id/tag_sample_name"
                            app:layout_constraintEnd_toStartOf="@+id/tag_sam_qty"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/tag_sample_name"
                            app:layout_constraintTop_toTopOf="@id/tag_sample_name"
                            tools:layout_editor_absoluteY="2dp" />

                        <TextView
                            android:id="@+id/tag_sam_qty"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:fontFamily="@font/satoshi_bold"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:text="@string/qty"
                            android:textColor="@color/bg_txt_color"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@id/tag_sample_name"
                            app:layout_constraintEnd_toStartOf="@+id/tag_dummy_sam"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/tag_sam_stock"
                            app:layout_constraintTop_toTopOf="@id/tag_sample_name"
                            tools:layout_editor_absoluteY="2dp" />

                        <TextView
                            android:id="@+id/tag_dummy_sam"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:paddingVertical="@dimen/_3sdp"
                            android:layout_marginHorizontal="@dimen/_2sdp"
                            android:fontFamily="@font/satoshi_bold"
                            app:layout_constraintBottom_toBottomOf="@id/tag_sample_name"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/tag_sam_qty"
                            app:layout_constraintTop_toTopOf="@id/tag_sample_name"
                            tools:layout_editor_absoluteY="2dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_add_sample_additional"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/constraint_header_sample"
                        app:layout_constraintVertical_bias="0.0" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btn_add_sample"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/bg_green_dot"
                        android:drawableStart="@drawable/iv_add"
                        android:fontFamily="@font/satoshi_bold"
                        android:paddingVertical="@dimen/_3sdp"
                        android:paddingStart="10dp"
                        android:paddingEnd="15dp"
                        android:text="@string/add_sample"
                        android:textColor="@color/green_2"
                        android:textSize="16sp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rv_add_sample_additional"
                        app:layout_constraintVertical_bias="0.0" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </saneforce.sanclm.commonClasses.VerticalScrollview>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_6sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:background="@drawable/bg_purple"
            android:fontFamily="@font/satoshi_bold"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_dummy"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>