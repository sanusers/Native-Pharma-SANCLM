<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_6sdp"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.reports.dayReport.DayReportDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

        <LinearLayout
           android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_stroke"
            android:backgroundTint="@color/white">

            <ImageView
                android:layout_width="@dimen/_6sdp"
                android:layout_height="@dimen/_6sdp"
                android:src="@drawable/search_icon_gray"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:layout_marginStart="@dimen/_5sdp"/>

            <EditText
                android:layout_weight="1"
                android:id="@+id/searchET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Search"
                android:textColorHint="@color/text_dark_65"
                android:textSize="@dimen/_6sdp"
                android:textColor="@color/text_dark_65"
                android:singleLine="true"
                android:background="@null"
                android:gravity="start|center"
                android:padding="@dimen/_5sdp"
                tools:ignore="SpUsage"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/black_stroke"
            android:backgroundTint="@color/text_dark"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/report_sort_icon"
                app:tint="@color/white" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>