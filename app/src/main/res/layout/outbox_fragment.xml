<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_4sdp">


    <ExpandableListView
        android:id="@+id/Expandapleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/r_layout"
        android:layout_marginTop="@dimen/_2sdp"
        android:divider="#B774737F"
        android:visibility="gone"
        android:dividerHeight="0.5dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOutBoxHead"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/r_layout"
        android:layout_marginTop="@dimen/_2sdp"
        android:divider="#B774737F"
        android:visibility="visible"
        android:dividerHeight="0.5dp" />

    <RelativeLayout
        android:id="@+id/r_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clear_calls"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_23sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@drawable/edittext_stroke"
            android:text="Clear Calls"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_7sdp"
            app:backgroundTint="@color/black_45" />

    </RelativeLayout>


</RelativeLayout>