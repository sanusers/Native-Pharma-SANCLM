<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_4sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/txt_call"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:textSize="@dimen/_7sdp"
        android:fontFamily="@font/satoshi_medium"
        android:layout_width="wrap_content"
        android:text="Count :"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:id="@+id/txt_callcount"
        android:text="06"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:textSize="@dimen/_7sdp"
        android:fontFamily="@font/satoshi_medium"
        android:layout_toRightOf="@+id/txt_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:padding="@dimen/_3sdp"
        android:background="@drawable/custom_backround_layout"
        android:backgroundTint="@color/text_sync_bg"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/refresh"
            android:layout_width="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/refresh_1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/refresh"
            android:layout_gravity="right"
            android:fontFamily="@font/satoshi_regular"
            android:text="Sync"
            android:layout_marginEnd="@dimen/_3sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_7sdp"
            android:textColor="@color/text_sync">

        </TextView>


    </RelativeLayout>



    <ExpandableListView
        android:id="@+id/Expandapleview"
        android:layout_width="match_parent"
        android:layout_below="@+id/txt_call"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_above="@+id/r_layout"
        android:layout_height="match_parent"
        />


    <RelativeLayout
        android:id="@+id/r_layout"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:textSize="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@drawable/edittext_stroke"
            android:text="Clear Calls"
            android:textColor="@color/white"
            app:backgroundTint="@color/black_45" />

    </RelativeLayout>



</RelativeLayout>