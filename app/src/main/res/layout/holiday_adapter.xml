<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:background="#00C689"
        android:orientation="vertical"
        android:padding=".02dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/Holidayl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_23sdp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/line_22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00C689"
                android:orientation="vertical"
                android:padding=".02dp" />

            <LinearLayout
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_23sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/month_name"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:fontFamily="@font/satoshi_bold"
                    android:padding="@dimen/_4sdp"
                    android:text="month_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/day"
                    android:layout_width="@dimen/_23sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:fontFamily="@font/satoshi_bold"
                    android:padding="@dimen/_4sdp"

                    android:text="day"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/weekdays"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:fontFamily="@font/satoshi_medium"
                    android:padding="@dimen/_4sdp"
                    android:text="weekdays"
                    android:textColor="#5D6D7E "
                    android:textSize="@dimen/_8sdp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/line_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#00C689"
                android:orientation="vertical"
                android:padding=".02dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/viewclr"
                    android:layout_width=".05dp"
                    android:layout_height="@dimen/_23sdp"
                    android:background="#00C689" />


                <LinearLayout
                    android:id="@+id/back_clr"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_23sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Holiday"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_23sdp"
                        android:fontFamily="@font/satoshi_bold"
                        android:padding="@dimen/_4sdp"
                        android:text="Holiday"
                        android:textColor="#00C689"
                        android:textSize="@dimen/_8sdp" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>