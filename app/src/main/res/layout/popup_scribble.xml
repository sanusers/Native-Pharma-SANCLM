<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/r_lay"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_purple">

        <TextView
            android:id="@+id/tool_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/satoshi_bold"
            android:padding="10dp"
            android:text="Scribble"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/iv_close_grey" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pen_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/r_lay_menu">

        <ImageView
            android:id="@+id/pen_black"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/black_pencil" />

        <ImageView
            android:id="@+id/pen_red"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/pen_black"
            android:background="@drawable/red_pencil" />

        <ImageView
            android:id="@+id/pen_green"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/pen_red"
            android:background="@drawable/green_pencil" />

        <Button
            android:id="@+id/submit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_purple"
            android:fontFamily="@font/satoshi_medium"
            android:text="@string/save"
            android:textAllCaps="false" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/canvas_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pen_bar"
        android:layout_below="@+id/tool_bar"
        android:layout_toEndOf="@+id/r_lay_menu"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/canva_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <saneforce.santrip.activity.homeScreen.call.adapter.detailing.PaintView
            android:id="@+id/paintviews"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r_lay_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar">

        <ImageView
            android:id="@+id/pencil"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/pencil_tool" />

        <ImageView
            android:id="@+id/erase"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/pencil"
            android:layout_marginTop="10dp"
            android:background="@drawable/erase_tool" />

        <ImageView
            android:id="@+id/sq"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_below="@+id/erase"
            android:layout_marginTop="10dp"
            android:background="@drawable/square_tool" />

        <ImageView
            android:id="@+id/cir"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/sq"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_tool" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/cir"
            android:layout_marginTop="10dp"
            android:background="@mipmap/ic_launcher"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>