<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.myresource.MyResource_mapview">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:background="@color/text_dark"
                android:backgroundTint="@color/text_dark"
                android:minHeight="?attr/actionBarSize"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <LinearLayout
                    android:id="@+id/mapbackArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_6sdp">

                    <ImageView
                        android:id="@+id/back_btn"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/arrow_back_white"
                        tools:ignore="ContentDescription" />

                </LinearLayout>


                <TextView
                    android:id="@+id/haed_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:fontFamily="@font/satoshi_variable"
                    android:text="Map View"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp"
                    tools:ignore="SpUsage" />


            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:id="@+id/tag_doclat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/pink_full"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_weight="1.8"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/Doc_taggsave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Save"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/l_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appBar"
            android:background="#FFFFFF"
            android:visibility="visible"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/Doc_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/DCr_icons"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center"

                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/custname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/satoshi_medium"
                        android:padding="@dimen/_3sdp"
                        android:text="DCR name"
                        android:textColor="#282A3C"
                        android:textSize="@dimen/_6sdp"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp">




                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/marker"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/town_name"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:fontFamily="@font/satoshi_medium"
                        android:padding="@dimen/_3sdp"
                        android:text="address"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_6sdp"
                        tools:ignore="SpUsage" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tagging_meters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_weight="1.6"
                android:gravity="right"
                android:padding="@dimen/_3sdp">

                <LinearLayout
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/draktheme_"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/satoshi_medium"
                        android:gravity="center"
                        android:text="14"
                        android:textColor="#F1536E"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/dis_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/satoshi_medium"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="km"
                        android:textColor="#F1536E"
                        android:textSize="@dimen/_6sdp"
                        tools:ignore="SpUsage" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/view_img"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:background="@drawable/draktheme_"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center"

                        android:src="@drawable/view_pic"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="View"
                        android:textColor="#F1536E"
                        android:textSize="@dimen/_6sdp"
                        tools:ignore="SpUsage" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </com.google.android.material.appbar.AppBarLayout>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBar" />


</RelativeLayout>