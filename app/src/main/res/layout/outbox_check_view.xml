<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_2sdp">


    <TextView
        android:id="@+id/tagCheckIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:fontFamily="@font/satoshi_medium"
        android:padding="@dimen/_4sdp"
        android:singleLine="true"
        android:text="@string/check_in"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/_7ssp"
        app:layout_constraintBottom_toTopOf="@id/tvCheckIn"
        app:layout_constraintEnd_toStartOf="@id/tagCheckOut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCheckIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:background="@drawable/bg_grey_70"
        android:fontFamily="@font/satoshi_bold"
        android:padding="@dimen/_4sdp"
        android:singleLine="true"
        android:textColor="@color/pink"
        android:textSize="@dimen/_7ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tagCheckIn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/tagCheckIn"
        app:layout_constraintTop_toBottomOf="@id/tagCheckIn" />


    <TextView
        android:id="@+id/tagCheckOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:fontFamily="@font/satoshi_medium"
        android:padding="@dimen/_4sdp"
        android:singleLine="true"
        android:text="@string/check_out"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/_7ssp"
        app:layout_constraintBottom_toTopOf="@id/tvCheckIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tagCheckIn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCheckOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:background="@drawable/bg_grey_70"
        android:fontFamily="@font/satoshi_bold"
        android:padding="@dimen/_4sdp"
        android:singleLine="true"
        android:textColor="@color/pink"
        android:textSize="@dimen/_7ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tagCheckOut"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/tagCheckOut"
        app:layout_constraintTop_toBottomOf="@id/tagCheckIn" />


</androidx.constraintlayout.widget.ConstraintLayout>
