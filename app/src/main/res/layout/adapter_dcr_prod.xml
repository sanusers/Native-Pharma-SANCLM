<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/_2sdp"
    android:windowSoftInputMode="adjustPan">

    <TextView
        android:id="@+id/tv_prd_name"
        android:layout_width="@dimen/_78sdp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_1sdp"
        android:fontFamily="@font/satoshi_medium"
        android:paddingHorizontal="@dimen/_4sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:singleLine="true"
        android:text="@string/product_name"
        android:textColor="@color/dark_purple"
        android:textSize="@dimen/_6ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_promoted"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_promoted"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_12sdp"
        android:paddingVertical="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/gray_cross_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_stock"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_prd_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        tools:layout_editor_absoluteY="@dimen/_1sdp" />

    <TextView
        android:id="@+id/tv_stock"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:background="@drawable/bg_light_grey_2"
        android:fontFamily="@font/satoshi_medium"
        android:paddingHorizontal="@dimen/_4sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:textColor="@color/text_qty_prd"
        android:textSize="@dimen/_6ssp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_samples"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img_promoted"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="@dimen/_1sdp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_samples"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_1sdp"
        android:fontFamily="@font/satoshi_medium"
        android:paddingHorizontal="@dimen/_4sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:singleLine="true"
        android:textColor="@color/dark_purple"
        android:textSize="@dimen/_6ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_rx_qty"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_stock"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="@dimen/_1sdp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_rx_qty"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_1sdp"
        android:fontFamily="@font/satoshi_medium"
        android:paddingHorizontal="@dimen/_4sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:singleLine="true"
        android:textColor="@color/dark_purple"
        android:textSize="@dimen/_6ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_rcpa"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_samples"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="@dimen/_1sdp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_rcpa"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_1sdp"
        android:fontFamily="@font/satoshi_medium"
        android:paddingHorizontal="@dimen/_4sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:singleLine="true"
        android:textColor="@color/dark_purple"
        android:textSize="@dimen/_6ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/tv_rx_qty"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="@dimen/_1sdp" />
</androidx.constraintlayout.widget.ConstraintLayout>