<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/constraint_list_tagged"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_4sdp"
    android:layout_marginVertical="@dimen/_2sdp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/satoshi_bold"
        android:layout_margin="@dimen/_4sdp"
        android:textColor="@color/dark_purple"
        app:layout_constraintBottom_toTopOf="@id/tv_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_info"
        android:layout_width="@dimen/_6sdp"
        android:layout_height="@dimen/_6sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/_2sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/info_icon_purple"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23,B Kaja Thoppu, thennur,Trichy - 620018"
        android:textSize="12sp"
        android:lineSpacingExtra="@dimen/_1sdp"
        android:textFontWeight="500"
        android:singleLine="false"
        android:fontFamily="@font/satoshi_medium"
        android:layout_marginVertical="@dimen/_1sdp"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:textColor="@color/dark_purple"
        app:layout_constraintBottom_toTopOf="@id/tv_meters"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/tv_meters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 Meters"
        android:textSize="12sp"
        android:fontFamily="@font/satoshi_medium"
        android:layout_marginVertical="@dimen/_3sdp"
        android:textStyle="normal"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:textColor="@color/pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_address"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>