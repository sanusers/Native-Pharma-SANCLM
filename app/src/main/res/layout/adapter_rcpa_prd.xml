<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginVertical="@dimen/_1sdp"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/dummy_view"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="#787A85"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/img_view"
        app:layout_constraintStart_toStartOf="@id/img_view"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_view"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_margin="@dimen/_2sdp"
        android:contentDescription="TODO"
        android:src="@drawable/img_plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_prd_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_prd_name"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:fontFamily="@font/satoshi_bold"
        android:paddingHorizontal="@dimen/_8sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:text="Prd Name"
        android:textColor="@color/dark_purple"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/img_view"
        app:layout_constraintEnd_toStartOf="@id/constraint_list_prod"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/img_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_list_prod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:paddingVertical="@dimen/_1sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_prd_name"
        app:layout_constraintStart_toEndOf="@id/tv_prd_name"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tag_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/satoshi_regular"
            android:padding="@dimen/_2sdp"
            android:text="@string/qty"
            android:textColor="@color/bg_txt_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_qty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:fontFamily="@font/satoshi_regular"
            android:padding="@dimen/_2sdp"
            android:text="@string/qty"
            android:textColor="@color/dark_purple"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tag_rate"
            app:layout_constraintStart_toEndOf="@id/tag_qty"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tag_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/satoshi_regular"
            android:padding="@dimen/_2sdp"
            android:text="@string/rate"
            android:textColor="@color/bg_txt_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_rate"
            app:layout_constraintStart_toEndOf="@id/tv_qty"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:fontFamily="@font/satoshi_regular"
            android:padding="@dimen/_2sdp"
            android:text="@string/rate"
            android:textColor="@color/dark_purple"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tag_value"
            app:layout_constraintStart_toEndOf="@id/tag_rate"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tag_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/satoshi_regular"
            android:padding="@dimen/_2sdp"
            android:text="@string/value"
            android:textColor="@color/bg_txt_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_value"
            app:layout_constraintStart_toEndOf="@id/tv_rate"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:fontFamily="@font/satoshi_regular"
            android:padding="@dimen/_2sdp"
            android:text="@string/value"
            android:textColor="@color/dark_purple"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tag_value"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:drawablePadding="@dimen/_4sdp"
        android:fontFamily="@font/satoshi_bold"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_4sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:text="@string/edit"
        android:textColor="@color/bg_blue"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/img_edit"
        app:layout_constraintBottom_toBottomOf="@id/img_view"
        app:layout_constraintEnd_toStartOf="@id/tv_delete"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/constraint_list_prod"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8sdp"
        android:drawablePadding="@dimen/_4sdp"
        android:fontFamily="@font/satoshi_bold"
        android:paddingHorizontal="@dimen/_4sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:text="@string/delete"
        android:textColor="#F1536E"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/iv_del_one"
        app:layout_constraintBottom_toBottomOf="@id/img_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/tv_edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:elevation="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_prd_name"
        app:layout_constraintTop_toBottomOf="@id/img_view">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/constraint_list_comp_main"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_light_grey_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_prd_name"
        app:layout_constraintTop_toBottomOf="@id/img_view">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_list_comp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/rv_comp_added_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/tag_comp_cmpy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:fontFamily="@font/satoshi_regular"
                android:padding="@dimen/_2sdp"
                android:text="@string/competitor_company"
                android:textColor="@color/bg_txt_color"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tag_comp_brand"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tag_comp_brand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:fontFamily="@font/satoshi_regular"
                android:padding="@dimen/_2sdp"
                android:text="@string/comp_brand"
                android:textColor="@color/bg_txt_color"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tag_qty_comp"
                app:layout_constraintStart_toEndOf="@id/tag_comp_cmpy"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tag_qty_comp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:fontFamily="@font/satoshi_regular"
                android:padding="@dimen/_2sdp"
                android:text="@string/qty"
                android:textColor="@color/bg_txt_color"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tag_rate_comp"
                app:layout_constraintStart_toEndOf="@id/tag_comp_brand"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tag_rate_comp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:fontFamily="@font/satoshi_regular"
                android:padding="@dimen/_2sdp"
                android:text="@string/rate"
                android:textColor="@color/bg_txt_color"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tag_value_comp"
                app:layout_constraintStart_toEndOf="@id/tag_qty_comp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tag_value_comp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:fontFamily="@font/satoshi_regular"
                android:padding="@dimen/_2sdp"
                android:text="@string/rate"
                android:textColor="@color/bg_txt_color"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tag_remarks"
                app:layout_constraintStart_toEndOf="@id/tag_rate_comp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tag_remarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:fontFamily="@font/satoshi_regular"
                android:padding="@dimen/_2sdp"
                android:text="@string/remarks"
                android:textColor="@color/bg_txt_color"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tag_value_comp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_comp_added_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraint_list_comp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>