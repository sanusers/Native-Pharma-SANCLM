<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_weight="1"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/tablayname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outbox"
        android:textSize="@dimen/_8sdp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/text_dark_65"
        android:fontFamily="@font/satoshi_medium"
        android:layout_marginTop="@dimen/_5sdp"
        tools:ignore="MissingConstraints,SpUsage"
        />

    <TextView
        android:id="@+id/tv_filter_count"
        android:layout_width="@dimen/_13sdp"
        android:layout_height="@dimen/_13sdp"
        android:layout_toRightOf="@id/tablayname"
        android:fontFamily="@font/satoshi_medium"
        android:background="@drawable/circular_background_black"
        android:gravity="center"
        android:text="50"
        android:textStyle="bold"
        android:textSize="@dimen/_6sdp"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints,SpUsage" />
</RelativeLayout>