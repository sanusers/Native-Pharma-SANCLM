<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_linear">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_deviation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Switch
                        android:id="@+id/switchButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/satoshi_medium"
                        android:text="Deviate Plan"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/_8sdp" />

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rl_rej_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:background="@drawable/backround_text"
                    android:backgroundTint="@color/bg_pink10"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card11"
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentStart="true"
                        android:backgroundTint="@color/red_60"
                        app:cardCornerRadius="@dimen/_2sdp" />

                    <TextView
                        android:id="@+id/txt_rejection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_toRightOf="@+id/card11"
                        android:fontFamily="@font/satoshi_medium"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="Rejection Reason"
                        android:textColor="@color/dark_pink"
                        android:textSize="@dimen/_7sdp"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rejected_reason"
                        android:layout_below="@id/txt_rejection"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_toRightOf="@+id/card11"
                        android:fontFamily="@font/satoshi_medium"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:text="Update Sample Given"
                        android:textColor="@color/black_45"
                        android:textSize="@dimen/_7sdp"
                        tools:ignore="SpUsage" />

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="@dimen/_4sdp"
                        android:id="@+id/close_rejected_reason"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/pink_cross">

                    </ImageView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_dev_pending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:background="@drawable/backround_text"
                    android:backgroundTint="@color/bg_pink10"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_dev_pending"
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_alignParentStart="true"
                        android:backgroundTint="@color/red_60"
                        app:cardCornerRadius="@dimen/_2sdp" />

                    <TextView
                        android:padding="@dimen/_4sdp"
                        android:id="@+id/txt_deviation_pending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_toRightOf="@+id/card_dev_pending"
                        android:fontFamily="@font/satoshi_medium"
                        android:text="Deviation Approval pending"
                        android:textColor="@color/dark_pink"
                        android:textSize="@dimen/_7sdp"
                        tools:ignore="SpUsage" />
                </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPlan2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_6sdp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_3sdp"
                    android:backgroundTint="@color/white"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/ll_plan2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/ll_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:padding="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/delete_img"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:src="@drawable/iv_del" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/satoshi_medium"
                                android:text="Delete"
                                android:textColor="@color/red_60"
                                android:textSize="@dimen/_7sdp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/rlworktype2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_6sdp"                             android:background="@drawable/backround_text"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtWorktype2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:fontFamily="@font/satoshi_medium"
                                android:hint="Select Work Type"
                                android:padding="@dimen/_4sdp"
                                android:textColor="@color/text_dark"
                                android:textColorHint="@color/text_dark"
                                android:textSize="@dimen/_7sdp" />

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_6sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:src="@drawable/right_arrow" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlheadquates2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:background="@drawable/backround_text"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <ProgressBar
                                android:id="@+id/progress_hq2"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:background="#26282A3C"
                                android:backgroundTint="#26282A3C"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/txtheadquaters2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:fontFamily="@font/satoshi_medium"
                                android:hint="Select Head Quarters"
                                android:padding="@dimen/_4sdp"
                                android:textColor="@color/text_dark"
                                android:textColorHint="@color/text_dark"
                                android:textSize="@dimen/_7sdp" />

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_6sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:src="@drawable/right_arrow" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlcluster2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:background="@drawable/backround_text"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txtCluster2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:fontFamily="@font/satoshi_medium"
                                android:hint="Select Cluster"
                                android:padding="@dimen/_4sdp"
                                android:text=""
                                android:textColor="@color/text_dark"

                                android:textColorHint="@color/text_dark"
                                android:textSize="@dimen/_7sdp" />

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_6sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:src="@drawable/right_arrow" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/txtdayremark2"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:background="@drawable/backround_text"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789.- "
                                android:fontFamily="@font/satoshi_medium"
                                android:gravity="top|left"
                                android:hint="Enter Remark"
                                android:inputType="text"
                                android:lines="8"
                                android:maxLines="10"
                                android:minLines="6"
                                android:padding="@dimen/_4sdp"
                                android:scrollbars="vertical"
                                android:textSize="@dimen/_7sdp" />


                            <ProgressBar
                                android:id="@+id/progress_sumit2"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:background="#26282A3C"
                                android:backgroundTint="#26282A3C"
                                android:visibility="gone" />
                        </RelativeLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPlan1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_6sdp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="@dimen/_3sdp"
                    android:elevation="@dimen/_2sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_plan1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/rlworktype1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_6sdp"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:layout_marginEnd="@dimen/_6sdp"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:background="@drawable/backround_text"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtWorktype1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:layout_toStartOf="@id/img_arrow_1"
                                    android:fontFamily="@font/satoshi_medium"
                                    android:hint="Select Work Type"
                                    android:padding="@dimen/_4sdp"
                                    android:textColor="@color/text_dark"
                                    android:textColorHint="@color/text_dark"
                                    android:textSize="@dimen/_7sdp" />

                                <ImageView
                                    android:id="@+id/img_arrow_1"
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_6sdp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:src="@drawable/right_arrow" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rlheadquates1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_6sdp"
                                android:layout_marginEnd="@dimen/_6sdp"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:background="@drawable/backround_text"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <ProgressBar
                                    android:id="@+id/progress_hq1"
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:background="#26282A3C"
                                    android:backgroundTint="#26282A3C"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/txtheadquaters1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:layout_toStartOf="@id/img_arrow_2"
                                    android:fontFamily="@font/satoshi_medium"
                                    android:hint="Select Head Quarters"
                                    android:padding="@dimen/_4sdp"
                                    android:textColor="@color/text_dark"
                                    android:textColorHint="@color/text_dark"
                                    android:textSize="@dimen/_7sdp" />

                                <ImageView
                                    android:id="@+id/img_arrow_2"
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_6sdp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:src="@drawable/right_arrow" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rlcluster1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_6sdp"
                                android:layout_marginEnd="@dimen/_6sdp"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:background="@drawable/backround_text"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtCluster1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:layout_toStartOf="@id/img_arrow_3"
                                    android:fontFamily="@font/satoshi_medium"
                                    android:hint="Select Cluster"
                                    android:padding="@dimen/_4sdp"
                                    android:text=""
                                    android:textColor="@color/text_dark"
                                    android:textColorHint="@color/text_dark"
                                    android:textSize="@dimen/_7sdp" />

                                <ImageView
                                    android:id="@+id/img_arrow_3"
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_6sdp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:src="@drawable/right_arrow" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <EditText
                                    android:id="@+id/txtdayremark1"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:background="@drawable/backround_text"
                                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789.- "
                                    android:fontFamily="@font/satoshi_medium"
                                    android:gravity="top|left"
                                    android:hint="Enter Remark"
                                    android:inputType="text"
                                    android:lines="8"
                                    android:maxLines="10"
                                    android:minLines="6"
                                    android:padding="@dimen/_4sdp"
                                    android:scrollbars="vertical"
                                    android:textSize="@dimen/_7sdp" />


                                <ProgressBar

                                    android:id="@+id/progress_sumit1"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:background="#26282A3C"
                                    android:backgroundTint="#26282A3C"
                                    android:visibility="gone" />
                            </RelativeLayout>

                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progress_wt_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:indeterminateTint="@color/dark_purple"
                            android:visibility="gone" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </ScrollView>


        <LinearLayout
            android:id="@+id/ll_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/view_dummy"
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtAddPlan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_23sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/background_button_border_black"
                android:enabled="false"
                android:fontFamily="@font/satoshi_medium"
                android:gravity="center"
                android:text="Add Plan"
                android:textAllCaps="false"
                android:textColor="@color/gray_45"
                android:textSize="@dimen/_7sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSave"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_23sdp"
                android:layout_weight="1"
                android:background="@drawable/background_button_border_black"
                android:fontFamily="@font/satoshi_medium"
                android:gravity="center"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/_7sdp"
                android:textStyle="bold" />

        </LinearLayout>


        <View
            android:id="@+id/view_dummy"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_above="@id/btnsumit"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:background="#9e9ea5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnsumit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_23sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:background="@drawable/edittext_stroke"
            android:fontFamily="@font/satoshi_medium"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="@string/final_submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold"
            app:backgroundTint="@color/black_45" />


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_sumit"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:backgroundTint="@color/black_45"
        android:visibility="gone" />

</RelativeLayout>