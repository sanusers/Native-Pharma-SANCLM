<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_backround_layout"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp">


    <TextView
        android:id="@+id/txt_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/satoshi_medium"
        android:text="Call Status"
        android:textColor="@color/black_45"
        android:textSize="@dimen/_7sdp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/rl_calender_syn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/_2sdp"
        android:background="@drawable/custom_backround_layout"
        android:backgroundTint="@color/text_sync_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_3sdp">


        <ImageView
            android:id="@+id/refresh"
            android:layout_width="@dimen/_6sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:src="@drawable/refresh_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_toEndOf="@+id/refresh"
            android:fontFamily="@font/satoshi_regular"
            android:text="@string/sync"
            android:textColor="@color/text_sync"
            android:textSize="@dimen/_6sdp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/view_bar"
        android:layout_width="wrap_content"
        android:layout_height=".5dp"
        android:layout_below="@+id/rl_calender_syn"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@color/cl_border_color" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_bar"
        android:layout_marginTop="@dimen/_1sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_bfr_month"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/bfr_month"
                        android:layout_width="@dimen/_6sdp"
                        android:layout_height="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_weight="0.5"
                        android:background="@null"
                        android:src="@drawable/less_than_black"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/monthYearTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:fontFamily="@font/satoshi_medium"
                    android:text="Feb 2021"
                    android:textAlignment="center"
                    android:textColor="#282A3C"
                    android:textSize="@dimen/_7sdp" />

                <LinearLayout
                    android:id="@+id/ll_next_month"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp">

                    <ImageView
                        android:layout_width="@dimen/_6sdp"
                        android:layout_height="@dimen/_6sdp"
                        android:background="@null"
                        android:src="@drawable/greater_than_black"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_9sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/satoshi_medium"
                    android:text="Su"
                    android:textAlignment="center"
                    android:textColor="#abb2b9"
                    android:textSize="@dimen/_6sdp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/satoshi_medium"
                    android:text="Mo"
                    android:textAlignment="center"
                    android:textColor="#abb2b9"
                    android:textSize="@dimen/_6sdp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/satoshi_medium"
                    android:text="Tu"
                    android:textAlignment="center"
                    android:textColor="#abb2b9"
                    android:textSize="@dimen/_6sdp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/satoshi_medium"
                    android:text="We"
                    android:textAlignment="center"
                    android:textColor="#abb2b9"
                    android:textSize="@dimen/_6sdp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/satoshi_medium"
                    android:text="Th"
                    android:textAlignment="center"
                    android:textColor="#abb2b9"
                    android:textSize="@dimen/_6sdp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/satoshi_medium"
                    android:text="Fr"
                    android:textAlignment="center"
                    android:textColor="#abb2b9"
                    android:textSize="@dimen/_6sdp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/satoshi_medium"
                    android:text="Sa"
                    android:textAlignment="center"
                    android:textColor="#abb2b9"
                    android:textSize="@dimen/_6sdp" />

            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calendarRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp" />

        <ScrollView
            android:id="@+id/types"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/calendarRecyclerView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_feild_work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_toRightOf="@id/txt_week_off"
                        android:background="@drawable/custom_backround_layout"
                        android:backgroundTint="@color/green_10"
                        android:fontFamily="@font/satoshi_medium"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/field_work"
                        android:textColor="@color/green_60"
                        android:textSize="@dimen/_5sdp" />


                    <TextView
                        android:id="@+id/txt_non_feild_work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_toRightOf="@id/txt_feild_work"
                        android:background="@drawable/custom_backround_layout"
                        android:backgroundTint="@color/blue_10"
                        android:fontFamily="@font/satoshi_medium"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/non_field_work"
                        android:textColor="@color/blue_60"
                        android:textSize="@dimen/_5sdp" />


                    <TextView
                        android:id="@+id/txt_leave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_holiday"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/custom_backround_layout"
                        android:backgroundTint="@color/red_10"
                        android:fontFamily="@font/satoshi_medium"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/leave"
                        android:textColor="@color/red_60"
                        android:textSize="@dimen/_5sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_miss_rele"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_feild_work"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_toRightOf="@id/txt_holiday"
                        android:background="@drawable/custom_backround_layout"
                        android:backgroundTint="@color/Hilo_bay_10"
                        android:fontFamily="@font/satoshi_medium"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/missed_released"
                        android:textColor="@color/Hilo_bay_60"
                        android:textSize="@dimen/_5sdp" />

                    <TextView
                        android:id="@+id/txt_re_entry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_feild_work"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_toRightOf="@id/txt_miss_rele"
                        android:background="@drawable/custom_backround_layout"
                        android:backgroundTint="@color/pink_10"
                        android:fontFamily="@font/satoshi_medium"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/re_entry"
                        android:textColor="@color/pink_60"
                        android:textSize="@dimen/_5sdp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_holiday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_week_off"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/custom_backround_layout"
                        android:backgroundTint="@color/lustylavender_10"
                        android:fontFamily="@font/satoshi_medium"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/holiday"
                        android:textColor="@color/lustylavender_60"
                        android:textSize="@dimen/_5sdp" />

                    <TextView
                        android:id="@+id/txt_week_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/custom_backround_layout"
                        android:backgroundTint="@color/yellow_10"
                        android:fontFamily="@font/satoshi_medium"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/weekly_off"
                        android:textColor="@color/yellow_60"
                        android:textSize="@dimen/_5sdp" />


                    <TextView
                        android:id="@+id/txt_leave_approve_pending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/custom_backround_layout"
                        android:backgroundTint="@color/Evening_Blue_10"
                        android:fontFamily="@font/satoshi_medium"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/leave_approve_pending"
                        android:textColor="@color/Evening_Blue_60"
                        android:textSize="@dimen/_5sdp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_tp_deviation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_leave"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/custom_backround_layout"
                        android:backgroundTint="@color/Evening_Blue_10"
                        android:fontFamily="@font/satoshi_medium"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/tp_deviation"
                        android:textColor="@color/Evening_Blue_60"
                        android:textSize="@dimen/_5sdp" />

                    <TextView
                        android:id="@+id/txt_tp_deviation_rele"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_holiday"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_toRightOf="@id/txt_leave"
                        android:background="@drawable/custom_backround_layout"
                        android:backgroundTint="@color/dark_green_10"
                        android:fontFamily="@font/satoshi_medium"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/tp_deviation_released"
                        android:textColor="@color/dark_green_60"
                        android:textSize="@dimen/_5sdp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>


                <TextView
                    android:id="@+id/txt_leave_pending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_leave"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_toRightOf="@id/txt_tp_deviation"
                    android:background="@drawable/custom_backround_layout"
                    android:backgroundTint="@color/GlassSea_10"
                    android:fontFamily="@font/satoshi_medium"
                    android:padding="@dimen/_3sdp"
                    android:text="Leave Approval Pending"
                    android:textColor="@color/GlassSea_60"
                    android:textSize="@dimen/_5sdp"
                    android:visibility="gone" />

            </LinearLayout>


        </ScrollView>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calendar_progress_bar"
            android:indeterminateTint="@color/dark_purple"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:visibility="visible"
            android:layout_above="@id/types" />

    </RelativeLayout>

</RelativeLayout>