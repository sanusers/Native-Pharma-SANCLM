<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.mastersync.MasterSyncActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_dark"
            android:backgroundTint="@color/text_dark"
            android:minHeight="?attr/actionBarSize"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" >

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/back_arrow_white"
                android:layout_marginStart="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Master Sync"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/satoshi_medium"/>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
        android:background="@color/white"
            android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/appBar">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/testdrawable">

                <TextView
                    android:id="@+id/hqName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MR_Name "
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:fontFamily="@font/satoshi_medium"
                    android:padding="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down_arrow"
                    android:padding="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:gravity="end"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Last Sync : "
                    android:textColor="@color/text_dark_65"
                    android:textSize="18sp"
                    android:fontFamily="@font/satoshi_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@id/txt"
                    android:text="27 Jun 2023 02:38 PM"
                    android:textColor="@color/text_dark_65"
                    android:textSize="18sp" />

            </RelativeLayout>

        </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/ll1"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.core.widget.NestedScrollView
                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                    android:background="#ececec"
                    android:scrollbars="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#ececec"
                            android:paddingStart="20dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp">

                            <TextView
                                android:id="@+id/doctor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Listed Doctor"
                                android:textColor="@color/text_dark"
                                android:textSize="18sp"
                                android:fontFamily="@font/satoshi_medium"
                                app:drawableEndCompat="@drawable/right_arrow"
                                android:padding="25dp"
                                android:background="@drawable/selector_box"
                                android:layout_alignParentStart="true" />

                            <TextView
                                android:id="@+id/unlistedDoctor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Unlisted Doctor"
                                android:textColor="@color/text_dark"
                                android:textSize="18sp"
                                android:fontFamily="@font/satoshi_medium"
                                app:drawableEndCompat="@drawable/down_arrow"
                                android:padding="25dp"
                                android:background="@drawable/selector_box"
                                android:layout_alignParentStart="true"
                                android:layout_below="@id/doctor"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/chemist"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Chemist"
                                android:textColor="@color/text_dark"
                                android:textSize="18sp"
                                android:fontFamily="@font/satoshi_medium"
                                app:drawableEndCompat="@drawable/down_arrow"
                                android:padding="25dp"
                                android:background="@drawable/selector_box"
                                android:layout_below="@id/unlistedDoctor"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/stockiest"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Stockist"
                                android:textColor="@color/text_dark"
                                android:textSize="18sp"
                                android:fontFamily="@font/satoshi_medium"
                                app:drawableEndCompat="@drawable/down_arrow"
                                android:padding="25dp"
                                android:background="@drawable/selector_box"
                                android:layout_below="@id/chemist"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/hospital"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Hospital"
                                android:textColor="@color/text_dark"
                                android:textSize="18sp"
                                android:fontFamily="@font/satoshi_medium"
                                app:drawableEndCompat="@drawable/down_arrow"
                                android:padding="25dp"
                                android:background="@drawable/selector_box"
                                android:layout_below="@id/stockiest"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/cip"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="CIP"
                                android:textColor="@color/text_dark"
                                android:textSize="18sp"
                                android:fontFamily="@font/satoshi_medium"
                                app:drawableEndCompat="@drawable/down_arrow"
                                android:padding="25dp"
                                android:background="@drawable/selector_box"
                                android:layout_below="@id/hospital"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/subordinate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Subordinate"
                                android:textColor="@color/text_dark"
                                android:textSize="18sp"
                                android:fontFamily="@font/satoshi_medium"
                                app:drawableEndCompat="@drawable/down_arrow"
                                android:padding="25dp"
                                android:background="@drawable/selector_box"
                                android:layout_below="@id/cip"
                                android:layout_marginTop="10dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/subordinate"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/selector_box"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="15dp"
                                    android:padding="25dp"
                                    android:text="Sync All"
                                    android:textColor="@color/text_dark"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/satoshi_medium"
                                    android:layout_gravity="center"
                                    app:drawableStartCompat="@drawable/refresh_icon" />

                            </LinearLayout>

                        </RelativeLayout>

                    </androidx.core.widget.NestedScrollView>

                <androidx.core.widget.NestedScrollView
                    android:layout_weight="1.4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#ececec"
                    android:scrollbars="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#ececec"
                            android:paddingStart="10dp"
                            android:paddingEnd="20dp">

                            <LinearLayout
                                android:id="@+id/ll3"
                                android:weightSum="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true">

                                <androidx.cardview.widget.CardView
                                    android:layout_weight=".75"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="6dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:background="@color/pink_15">

                                        <androidx.cardview.widget.CardView
                                            android:layout_width="5dp"
                                            android:layout_height="match_parent"
                                            app:cardCornerRadius="5dp"
                                            android:backgroundTint="@color/dark_pink"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Tap on each to sync individually"
                                            android:textColor="@color/dark_pink"
                                            android:textSize="16sp"
                                            android:fontFamily="@font/satoshi_medium"
                                            android:layout_gravity="center"
                                            android:padding="15dp"/>

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingTop="25dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@id/ll3"
                                android:layout_alignParentBottom="true">

                                <LinearLayout
                                    android:id="@+id/ll4"
                                    android:weightSum="3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentTop="true">

                                    <LinearLayout
                                        android:id="@+id/dr_card"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:padding="15dp"
                                        android:background="@drawable/selector_box">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_weight="1"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:text="Geo Doctor"
                                                android:textColor="@color/text_dark"
                                                android:textSize="18sp"
                                                android:fontFamily="@font/satoshi_medium"
                                                android:layout_gravity="center"/>

                                            <ProgressBar
                                                android:id="@+id/dr_progressBar"
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:indeterminateDrawable="@drawable/pink_progress_bar"
                                                android:layout_gravity="end|center"
                                                android:visibility="gone"/>

                                        </LinearLayout>

                                        <TextView
                                            android:layout_weight="1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="0dp"
                                            android:text="12"
                                            android:textColor="@color/text_dark_65"
                                            android:textSize="18sp"
                                            android:fontFamily="@font/satoshi_medium"
                                            android:layout_marginTop="10dp"
                                            android:layout_gravity="bottom"
                                            android:gravity="bottom"/>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/spl_card"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:padding="15dp"
                                        android:layout_marginStart="20dp"
                                        android:background="@drawable/selector_box">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_weight="1"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:text="Specialty"
                                                android:textColor="@color/text_dark"
                                                android:textSize="18sp"
                                                android:fontFamily="@font/satoshi_medium"
                                                android:layout_gravity="center"/>

                                            <ProgressBar
                                                android:id="@+id/sp_progressBar"
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:indeterminateDrawable="@drawable/pink_progress_bar"
                                                android:layout_gravity="end|center"
                                                android:visibility="gone"/>

                                        </LinearLayout>

                                        <TextView
                                            android:layout_weight="1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="0dp"
                                            android:text="12"
                                            android:textColor="@color/text_dark_65"
                                            android:textSize="18sp"
                                            android:fontFamily="@font/satoshi_medium"
                                            android:layout_marginTop="10dp"
                                            android:layout_gravity="bottom"
                                            android:gravity="bottom"/>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/ql_card"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:padding="15dp"
                                        android:layout_marginStart="20dp"
                                        android:background="@drawable/selector_box">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_weight="1"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:text="Qualification"
                                                android:textColor="@color/text_dark"
                                                android:textSize="18sp"
                                                android:fontFamily="@font/satoshi_medium"
                                                android:layout_gravity="center"/>

                                            <ProgressBar
                                                android:id="@+id/ql_progressBar"
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:indeterminateDrawable="@drawable/pink_progress_bar"
                                                android:layout_gravity="end|center"
                                                android:visibility="gone"/>

                                        </LinearLayout>

                                        <TextView
                                            android:layout_weight="1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="0dp"
                                            android:text="12"
                                            android:textColor="@color/text_dark_65"
                                            android:textSize="18sp"
                                            android:fontFamily="@font/satoshi_medium"
                                            android:layout_marginTop="10dp"
                                            android:layout_gravity="bottom"
                                            android:gravity="bottom"/>
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll5"
                                    android:weightSum="3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="20dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_below="@id/ll4">

                                    <LinearLayout
                                        android:id="@+id/ql_card1"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:padding="15dp"
                                        android:background="@drawable/selector_box">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_weight="1"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:text="Qualification"
                                                android:textColor="@color/text_dark"
                                                android:textSize="18sp"
                                                android:fontFamily="@font/satoshi_medium"
                                                android:layout_gravity="center"/>

                                            <ProgressBar
                                                android:id="@+id/ql_progressBar1"
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:indeterminateDrawable="@drawable/pink_progress_bar"
                                                android:layout_gravity="end|center"
                                                android:visibility="gone"/>

                                        </LinearLayout>

                                        <TextView
                                            android:layout_weight="1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="0dp"
                                            android:text="12"
                                            android:textColor="@color/text_dark_65"
                                            android:textSize="18sp"
                                            android:fontFamily="@font/satoshi_medium"
                                            android:layout_marginTop="10dp"
                                            android:layout_gravity="bottom"
                                            android:gravity="bottom"/>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/master_card"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:padding="15dp"
                                        android:layout_marginStart="20dp"
                                        android:background="@drawable/selector_box">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_weight="1"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:text="Master"
                                                android:textColor="@color/text_dark"
                                                android:textSize="18sp"
                                                android:fontFamily="@font/satoshi_medium"
                                                android:layout_gravity="center"/>

                                            <ProgressBar
                                                android:id="@+id/master_progressBar"
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:indeterminateDrawable="@drawable/pink_progress_bar"
                                                android:layout_gravity="end|center"
                                                android:visibility="gone"/>

                                        </LinearLayout>

                                        <TextView
                                            android:layout_weight="1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="0dp"
                                            android:text="12"
                                            android:textColor="@color/text_dark_65"
                                            android:textSize="18sp"
                                            android:fontFamily="@font/satoshi_medium"
                                            android:layout_marginTop="10dp"
                                            android:layout_gravity="bottom"
                                            android:gravity="bottom"/>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/class_card"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:padding="15dp"
                                        android:layout_marginStart="20dp"
                                        android:background="@drawable/selector_box">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_weight="1"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:text="Class "
                                                android:textSize="18sp"
                                                android:textColor="@color/text_dark"
                                                android:fontFamily="@font/satoshi_medium"
                                                android:layout_gravity="center"/>

                                            <ProgressBar
                                                android:id="@+id/class_progressBar"
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:indeterminateDrawable="@drawable/pink_progress_bar"
                                                android:layout_gravity="end|center"
                                                android:visibility="gone"/>

                                        </LinearLayout>

                                        <TextView
                                            android:layout_weight="1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="0dp"
                                            android:text="12"
                                            android:textColor="@color/text_dark_65"
                                            android:textSize="18sp"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/satoshi_medium"
                                            android:layout_marginTop="10dp"
                                            android:layout_gravity="bottom"
                                            android:gravity="bottom"/>
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:weightSum="3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="20dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_below="@id/ll5">

                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:padding="35dp"
                                        android:layout_marginEnd="20dp"
                                        android:backgroundTint="@color/text_dark"
                                        android:background="@drawable/selector_box">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Sync Listed Doctor"
                                            android:textColor="@color/white"
                                            android:textSize="18sp"
                                            android:fontFamily="@font/satoshi_medium"
                                            android:layout_gravity="center"
                                            android:gravity="center" />

                                    </LinearLayout>

                                </LinearLayout>


                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                </androidx.core.widget.NestedScrollView>



            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>