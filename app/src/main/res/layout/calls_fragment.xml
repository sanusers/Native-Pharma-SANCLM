<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_4sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


  <TextView
      android:id="@+id/txt_call"
      android:layout_marginTop="@dimen/_3sdp"
      android:layout_marginLeft="@dimen/_3sdp"
      android:fontFamily="@font/satoshi_medium"
      android:layout_width="wrap_content"
      android:text="Call Count :"
      android:textSize="@dimen/_7sdp"
      android:layout_height="wrap_content">

  </TextView>
  <TextView
        android:id="@+id/txt_callcount"
        android:text="5"
        android:textSize="@dimen/_7sdp"
        android:fontFamily="@font/satoshi_medium"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_toRightOf="@+id/txt_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>



  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:gravity="center"
      android:padding="@dimen/_1sdp"
      android:background="@drawable/custom_backround_layout"
      android:backgroundTint="#F1E4E4"
      android:orientation="horizontal">


    <ImageView
        android:id="@+id/refresh"
        android:layout_width="@dimen/_6sdp"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_height="@dimen/_10sdp"
        android:src="@drawable/refresh_1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/refresh"
        android:layout_gravity="right"
        android:fontFamily="@font/satoshi_regular"
        android:text="Sync"
        android:layout_marginEnd="@dimen/_3sdp"
        android:textStyle="bold"
        android:textSize="@dimen/_7sdp"
        android:textColor="#f1536e">

    </TextView>


  </RelativeLayout>




  <TextView
      android:id="@+id/text_date"
      android:layout_below="@+id/txt_call"
      android:layout_marginTop="@dimen/_4sdp"
      android:layout_marginLeft="@dimen/_3sdp"
      android:layout_width="wrap_content"
      android:fontFamily="@font/satoshi_medium"
      android:textStyle="bold"
      android:textSize="@dimen/_7sdp"
      android:textColor="@color/black_45"
      android:text="September 13, 2023"
      android:layout_height="wrap_content">

  </TextView>

  <TextView
      android:layout_below="@+id/txt_call"
      android:layout_marginTop="@dimen/_4sdp"
      android:textStyle="normal"
      android:layout_width="wrap_content"
      android:layout_marginRight="@dimen/_3sdp"
      android:text="Collapse"
      android:layout_alignParentRight="true"
      android:textSize="@dimen/_7sdp"
      android:fontFamily="@font/satoshi_medium"
      android:layout_alignParentEnd="true"
      android:layout_height="wrap_content">

  </TextView>

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyelerview"
      android:layout_width="match_parent"
      android:layout_below="@+id/text_date"
      android:layout_marginTop="@dimen/_5sdp"
      android:layout_marginLeft="@dimen/_3sdp"
      android:layout_marginRight="@dimen/_3sdp"
      android:layout_above="@+id/r_layout"
      android:layout_height="match_parent" />





  <RelativeLayout
      android:id="@+id/r_layout"
      android:layout_width="match_parent"
      android:layout_alignParentBottom="true"
      android:orientation="vertical"
      android:layout_marginTop="@dimen/_3sdp"
      android:layout_marginLeft="@dimen/_3sdp"
      android:layout_marginRight="@dimen/_3sdp"
      android:layout_marginBottom="@dimen/_3sdp"
      android:layout_height="wrap_content">

  <LinearLayout
      android:layout_width="match_parent"
      android:id="@+id/linear"
      android:padding="0dp"
      android:layout_marginBottom="@dimen/_3sdp"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Call"
        android:layout_weight="1"
        android:textSize="@dimen/_7sdp"
        android:fontFamily="@font/satoshi_medium"
        android:layout_marginRight="@dimen/_3sdp"
        android:textColor="@color/black"
        android:padding="@dimen/_3sdp"
        android:background="@drawable/background_button_border_black"
        app:backgroundTint="#26282A3C" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/satoshi_medium"
        android:background="@drawable/background_button_border_black"
        android:text="Add Activity"
        android:textSize="@dimen/_7sdp"
        android:padding="@dimen/_3sdp"
        android:textColor="@color/black"
        app:backgroundTint="#26282A3C" />

  </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:fontFamily="@font/satoshi_variable"
        android:background="@drawable/edittext_stroke"
        android:textColor="@color/white"
        android:text="Final Sumit"
        android:textSize="@dimen/_7sdp"
        app:backgroundTint="#282A3C" />

  </RelativeLayout>



</RelativeLayout>