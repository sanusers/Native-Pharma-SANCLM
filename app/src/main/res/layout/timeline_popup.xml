<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="@dimen/_2sdp"
    app:cardElevation="@dimen/_1sdp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/popup_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_darkpurple_sharp_bottom_end">

            <TextView
                android:id="@+id/tv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:fontFamily="@font/satoshi_bold"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="@string/timeline"
                android:textColor="@color/white"
                android:textSize="@dimen/_6ssp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignTop="@id/tv_head"
                android:layout_alignBottom="@id/tv_head"
                android:layout_alignEnd="@id/timeline"
                android:padding="@dimen/_2sdp"
                app:tint="@color/white"
                android:src="@drawable/img_close"
                tools:ignore="ContentDescription" />

            <View
                android:id="@+id/view_dummy"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/tv_head"
                android:layout_alignStart="@id/timeline"
                android:layout_alignEnd="@id/timeline"
                android:background="@color/light_grey" />

            <TextView
                android:id="@+id/timeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_dummy"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/satoshi_bold"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:paddingHorizontal="@dimen/_4sdp"
                android:textAlignment="textStart"
                android:paddingVertical="@dimen/_3sdp"
                android:text="12:34:56 - 01:23:45\n12:13:14 - 04:44:44"
                android:textColor="@color/white"
                android:textSize="@dimen/_5ssp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/_6sdp"
            android:layout_height="@dimen/_6sdp"
            android:layout_alignEnd="@id/popup_layout"
            android:layout_below="@id/popup_layout"
            android:layout_marginEnd="1dp"
            android:src="@drawable/pointer" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>