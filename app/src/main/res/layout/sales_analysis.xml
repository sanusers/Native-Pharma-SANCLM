<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Sales Analysis"
        android:textStyle="bold">

    </TextView>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_date1"

        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@drawable/backround_text">

            <TextView
                android:id="@+id/text_month"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/custom_background_black"
                android:gravity="center"
                android:padding="0dp"
                android:text="Monthly"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/text_Quaterly"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/cutom_backround_grey"
                android:gravity="center"
                android:padding="0dp"
                android:text="Quarterly"
                android:textColor="@color/txt_lite_black"
                android:textSize="10sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/text_yearly"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/cutom_backround_grey"
                android:gravity="center"
                android:padding="0dp"
                android:text="Yearly"
                android:textColor="@color/txt_lite_black"
                android:textSize="10sp"
                android:textStyle="bold"></TextView>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout2"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.6">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_backround_layout"
                android:elevation="0dp"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">


                    <TextView
                        android:id="@+id/text_Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="5dp"
                        android:text="Primary Sales"
                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:id="@+id/text_Primary_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_Primary"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="106.56L"
                        android:textSize="20sp"
                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:id="@+id/text_Primary_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_Primary_value"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:text="Target 282.2L"
                        android:textColor="#a9a8af"
                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:id="@+id/text_primary_growth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_Primary"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/text_Primary_value"
                        android:background="@drawable/custom_backround_layout"
                        android:backgroundTint="#d4f8ef"
                        android:padding="3dp"
                        android:text="39% Growth"
                        android:textColor="#00d4a5"
                        android:textSize="10sp"
                        android:textStyle="bold">

                    </TextView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_backround_layout"
                android:elevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:layout_gravity="center">


                    <TextView
                        android:id="@+id/text_secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:text="Secondary Sales"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/text_seondary_growth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_secondary"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/text_secondary_value"
                        android:background="@drawable/custom_backround_layout"
                        android:backgroundTint="#e1f2fd"
                        android:padding="3dp"
                        android:text="39% Growth"

                        android:textColor="#41a1ef"
                        android:textSize="10sp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/text_secondary_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_secondary"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"

                        android:text="106.56L"
                        android:textSize="20sp"
                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:id="@+id/text_secondary_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_secondary_value"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="Target 282.2L"
                        android:textColor="#a9a8af"
                        android:textStyle="bold">

                    </TextView>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_backround_layout"
                android:elevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">


                    <TextView
                        android:id="@+id/text_RCPA1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:text="RCPA"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/text_RCPA_growth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_RCPA1"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/text_RCPA1_value"
                        android:background="@drawable/custom_backround_layout"
                        android:backgroundTint="#ffe5e9"
                        android:padding="3dp"
                        android:text="39% Growth"
                        android:textColor="#fe5876"

                        android:textSize="10sp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/text_RCPA1_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_RCPA1"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="106.56L"
                        android:textSize="20sp"
                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:id="@+id/text_RCPA1_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_RCPA1_value"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="Target 282.2L"
                        android:textColor="#a9a8af"
                        android:textStyle="bold">

                    </TextView>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"

                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_backround_layout"
                    android:elevation="5dp">


                    <TextView
                        android:id="@+id/text_PCPM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:text="PCPM"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/text_PCPM_growth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_PCPM"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/text_PCPM_value"
                        android:background="@drawable/custom_backround_layout"
                        android:backgroundTint="#fef6df"
                        android:padding="3dp"
                        android:text="39% Growth"
                        android:textColor="#feda86"
                        android:textSize="10sp"
                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:id="@+id/text_PCPM_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_PCPM"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="106.56L"
                        android:textSize="20sp"
                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:id="@+id/text_PCPM_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_PCPM_value"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Target 282.2L"
                        android:textColor="#a9a8af"

                        android:textStyle="bold">

                    </TextView>



                    <RelativeLayout
                        android:id="@+id/dcr_call_layout"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:layout_below="@+id/text_PCPM_target"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:id="@+id/progress_bar"
                            style="@style/CircularDeterminateProgressBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:indeterminate="false"
                            android:padding="20dp"
                            android:progress="60"
                            android:progressDrawable="@drawable/progressbar_circular"
                            android:rotation="-90" />

                        <TextView
                            android:id="@+id/progressValueTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="25%"
                            android:textColor="#bab9bf"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_backround_layout"
                android:elevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_backround_layout"
                    android:elevation="5dp">


                    <TextView
                        android:id="@+id/text_BDL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:text="BDL"
                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:id="@+id/text_BDL_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_BDL"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="10dp"
                        android:text="106.56L"
                        android:textSize="20sp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/text_BDL_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_BDL_value"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Target 282.2L"
                        android:textColor="#a9a8af"

                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:id="@+id/text_BDL_target1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_BDL_target"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Target"
                        android:textColor="#85858f"

                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:id="@+id/text_BDL_actual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_BDL_target"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:text="Actual"
                        android:textColor="#00d2a3"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/text_BDL_target_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_BDL_target1"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="282.2L"
                        android:textColor="#85858f"

                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:id="@+id/text_tareget_value_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_BDL_target1"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:text="109.27L"
                        android:textColor="#00d2a3"
                        android:textStyle="bold">

                    </TextView>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_backround_layout"
                android:elevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">


                    <TextView
                        android:id="@+id/text_RCPA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:text="RCPA"
                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:id="@+id/text_RCPA_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_RCPA"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="106.56L"
                        android:textSize="20sp"
                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:id="@+id/text_RCPA_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_RCPA_value"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="Target 282.2L"
                        android:textColor="#a9a8af"

                        android:textStyle="bold">

                    </TextView>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>