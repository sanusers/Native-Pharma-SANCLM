<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_1sdp">

    <TextView
        android:id="@+id/tv_input_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:layout_marginVertical="@dimen/_1sdp"
        android:fontFamily="@font/satoshi_medium"
        android:paddingHorizontal="@dimen/_4sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:singleLine="true"
        android:text="@string/input_name"
        android:textColor="@color/dark_purple"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rl_lay"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rl_lay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:layout_marginVertical="@dimen/_1sdp"
        android:inputType="number"
        android:maxLength="4"
        android:textColor="@color/text_qty_prd"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_input_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="2dp">

        <TextView
            android:id="@+id/tv_inp_qty"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_1sdp"
            android:background="@drawable/bg_light_grey_2"
            android:fontFamily="@font/satoshi_medium"
            android:maxLength="4"
            android:paddingHorizontal="@dimen/_4sdp"
            android:paddingVertical="@dimen/_3sdp"
            android:textColor="@color/text_qty_prd"
            android:textSize="14sp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>