                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4sdp"
                android:fontFamily="@font/satoshi_bold"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_4sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:text="@string/competitor_product"
                android:textColor="@color/black"
                 android:textSize="@dimen/_7ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/view_dummy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:src="@drawable/img_close"
                app:layout_constraintBottom_toBottomOf="@id/tv_tag_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/tv_tag_header"
                app:layout_constraintTop_toTopOf="@id/tv_tag_header"
