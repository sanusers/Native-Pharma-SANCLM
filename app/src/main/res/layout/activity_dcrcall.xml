        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_add_rcpa_side"
        android:name="saneforce.sanclm.activity.homeScreen.call.fragments.RCPAFragmentSide"
