        app:layout_constraintTop_toBottomOf="@id/view_dummy"
        app:layout_constraintVertical_bias="0.0"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_products"
        android:name="com.sanforce.edetailing.Fragment.Calls.ProductFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout="@layout/fragment_products"
        tools:layout="@layout/fragment_products"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:layout_marginVertical="@dimen/_4sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/rl_btns"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_dummy"
        app:layout_constraintVertical_bias="0.0"/>
-->
    <RelativeLayout
        android:id="@+id/rl_btns"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@id/view_pager">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:background="@drawable/bg_sale_sample"
            android:fontFamily="@font/satoshi_bold"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/dark_purple"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_final_submit"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:background="@drawable/bg_purple"
            android:fontFamily="@font/satoshi_bold"
            android:layout_toEndOf="@id/btn_cancel"
            android:layout_alignParentTop="true"
            android:text="@string/final_submit"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>
