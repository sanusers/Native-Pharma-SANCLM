    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_add_call_details_side"
        android:name="saneforce.sanclm.activity.homeScreen.call.fragments.AdditionalCallDetailedSide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout="@layout/fragment_add_call_details_side"
        tools:layout="@layout/fragment_add_call_details_side"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
