<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stp_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    tools:context=".activity.standardTourPlan.addListScreen.AddListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_grey">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_dark"
                android:backgroundTint="@color/text_dark"
                android:minHeight="?attr/actionBarSize"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <LinearLayout
                    android:id="@+id/backArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_6sdp">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/arrow_back_white"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:fontFamily="@font/satoshi_variable"
                    android:text="@string/standard_tour_plan"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_7ssp" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/cluster_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appBar"
            android:layout_margin="@dimen/_5sdp"
            android:fontFamily="@font/satoshi_bold"
            android:text="@string/cluster"
            android:textColor="@color/dark_purple"
            android:textSize="@dimen/_6ssp" />

        <LinearLayout
            android:id="@+id/ll_cluster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cluster_title"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="@drawable/bg_white_border_purple"
            android:orientation="horizontal"
            android:padding="@dimen/_2sdp">

            <TextView
                android:id="@+id/selected_clusters"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ellipsize="end"
                android:fontFamily="@font/satoshi_regular"
                android:hint="@string/select_cluster"
                android:maxLines="1"
                android:padding="@dimen/_4sdp"
                tools:text="Select Cluster"
                android:textColor="@color/dark_purple"
                android:textColorHint="@color/dark_purple"
                android:textSize="@dimen/_6ssp" />

            <ImageView
                android:id="@+id/right_arrow"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/right_arrow" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ll_cluster"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_toEndOf="@id/ll_cluster"
            android:background="@drawable/bg_white_border_purple"
            android:padding="@dimen/_2sdp"
            android:scrollbars="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tag_tv_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:background="@drawable/bg_light_purple"
                    android:fontFamily="@font/satoshi_medium"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:text="@string/txt_doctor"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_6ssp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tag_tv_chemist"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tag_tv_chemist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:fontFamily="@font/satoshi_medium"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:text="@string/txt_chemist"
                    android:textColor="@color/dark_purple"
                    android:textSize="@dimen/_6ssp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tag_tv_doctor"
                    app:layout_constraintRight_toLeftOf="@id/tag_tv_stockist"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tag_tv_stockist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:fontFamily="@font/satoshi_medium"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:text="@string/txt_stockist"
                    android:textColor="@color/dark_purple"
                    android:textSize="@dimen/_6ssp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tag_tv_chemist"
                    app:layout_constraintRight_toLeftOf="@id/tag_tv_undr"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tag_tv_undr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:fontFamily="@font/satoshi_medium"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:text="@string/txt_undr"
                    android:textColor="@color/dark_purple"
                    android:textSize="@dimen/_6ssp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tag_tv_cip"
                    app:layout_constraintLeft_toRightOf="@id/tag_tv_stockist"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tag_tv_cip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:fontFamily="@font/satoshi_medium"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:text="@string/cip"
                    android:textColor="@color/dark_purple"
                    android:textSize="@dimen/_6ssp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tag_tv_hospital"
                    app:layout_constraintLeft_toRightOf="@id/tag_tv_undr"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tag_tv_hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:fontFamily="@font/satoshi_medium"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:text="@string/txt_hospital"
                    android:textColor="@color/dark_purple"
                    android:textSize="@dimen/_6ssp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tag_tv_cip"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btn_save"
            android:layout_below="@id/ll_cluster"
            android:layout_margin="@dimen/_2sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_left_pane"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_search_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_search"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginEnd="0dp"
                        android:src="@drawable/grey_search" />

                    <EditText
                        android:id="@+id/et_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_1sdp"
                        android:background="@null"
                        android:fontFamily="@font/satoshi_medium"
                        android:hint="@string/search"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/_3sdp"
                        android:textSize="@dimen/_6ssp" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_3sdp">

                    <RelativeLayout
                        android:id="@+id/rl_dcr_selection"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/ll_dcr_selection"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/cb_dcr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.2"
                                    android:visibility="invisible"
                                    android:buttonTint="@color/dark_purple" />

                                <TextView
                                    android:id="@+id/tv_dcr_name"
                                    android:layout_width="@dimen/_80sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/satoshi_bold"
                                    android:maxLines="1"
                                    android:padding="@dimen/_3sdp"
                                    android:text="Name"
                                    android:textColor="@color/dark_purple"
                                    android:textSize="@dimen/_6ssp" />

                                <TextView
                                    android:id="@+id/tv_dcr_spec"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/satoshi_bold"
                                    android:maxLines="1"
                                    android:padding="@dimen/_3sdp"
                                    android:text="Speciality"
                                    android:textColor="@color/dark_purple"
                                    android:textSize="@dimen/_6ssp" />

                                <TextView
                                    android:id="@+id/tv_dcr_cat_x_visit"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/satoshi_bold"
                                    android:maxLines="1"
                                    android:padding="@dimen/_3sdp"
                                    android:text="Category(Visit.Freq)"
                                    android:textColor="@color/dark_purple"
                                    android:textSize="@dimen/_6ssp" />

                                <TextView
                                    android:id="@+id/tv_dcr_planned_for"
                                    android:layout_width="@dimen/_80sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/satoshi_bold"
                                    android:maxLines="1"
                                    android:padding="@dimen/_3sdp"
                                    android:text="Planned for"
                                    android:textColor="@color/dark_purple"
                                    android:textSize="@dimen/_6ssp" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/dark_purple" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_dcr_selection"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:listitem="@layout/item_stp_add_list_dcr" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/no_data"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/img_no_data"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/no_data_folder" />

                            <TextView
                                android:id="@+id/tv_no_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_no_data"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/satoshi_medium"
                                android:text="Select Cluster to view list"
                                android:textColor="@color/dark_purple"
                                android:textSize="@dimen/_8ssp" />
                        </RelativeLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_right_pane"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:layout_weight="3"
                app:cardCornerRadius="@dimen/_3sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_3sdp">

                    <LinearLayout
                        android:id="@+id/ll_selected_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_selected_dcr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/satoshi_bold"
                            android:text="Selected Doctor"
                            android:textColor="@color/dark_purple"
                            android:textSize="@dimen/_7ssp" />

                        <TextView
                            android:id="@+id/tv_selected_dcr_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/satoshi_bold"
                            android:paddingStart="@dimen/_3sdp"
                            android:paddingEnd="0dp"
                            android:text="(2)"
                            android:textColor="@color/dark_purple"
                            android:textSize="@dimen/_6ssp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="@dimen/_3sdp"
                        android:background="@color/dark_purple"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_selected_dcr_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_stp_add_list_selected_dcr" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:background="@drawable/bg_border_with_pink"
            android:fontFamily="@font/satoshi_bold"
            android:paddingHorizontal="@dimen/_15sdp"
            android:text="@string/clear_all"
            android:textAllCaps="false"
            android:textColor="@color/dark_purple"
            android:textSize="@dimen/_6ssp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_toStartOf="@id/btn_save"
            android:background="@drawable/bg_border_with_pink"
            android:fontFamily="@font/satoshi_bold"
            android:paddingHorizontal="@dimen/_15sdp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/dark_purple"
            android:textSize="@dimen/_6ssp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:background="@drawable/bg_purple"
            android:fontFamily="@font/satoshi_bold"
            android:paddingHorizontal="@dimen/_15sdp"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_6ssp"
            android:textStyle="bold" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:drawerLayoutCornerSize="0dp">

        <include
            android:id="@+id/stp_add_list_navigation"
            layout="@layout/list_item_worktye" />

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>