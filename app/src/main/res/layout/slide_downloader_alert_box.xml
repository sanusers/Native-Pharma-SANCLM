<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_backround_layout">
 <RelativeLayout
     android:layout_width="match_parent"
     android:id="@+id/rl_title_layout"
     android:padding="@dimen/_5sdp"
     android:gravity="center"
     android:layout_height="@dimen/_30sdp">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentStart="true"
         android:layout_alignParentTop="true"
         android:textSize="@dimen/_9sdp"
         android:fontFamily="@font/satoshi_medium"
         android:gravity="center"
         android:layout_marginTop="@dimen/_5sdp"
         android:text="Slide downloader"
         android:textColor="@color/black_45"
         android:textStyle="bold" />

     <TextView
         android:id="@+id/txt_downloadcount"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/_5sdp"
         android:layout_centerHorizontal="true"
         android:layout_toLeftOf="@id/cancel_img"
         android:gravity="center"
         android:textSize="@dimen/_9sdp"
         android:text="55/55"
         android:layout_marginEnd="@dimen/_20sdp"
         android:textColor="@color/black_45"
         android:textStyle="bold">

     </TextView>

     <ImageView
         android:id="@+id/cancel_img"
         android:layout_width="@dimen/_25sdp"
         android:layout_height="@dimen/_25sdp"
         android:layout_marginTop="@dimen/_2sdp"
         android:layout_marginEnd="@dimen/_5sdp"
         android:background="@color/white"
         android:layout_alignParentTop="true"
         android:layout_alignParentEnd="true"
         android:src="@drawable/close_icon" />

 </RelativeLayout>


    <View
        android:id="@+id/gggg"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_title_layout"
        android:background="#9e9ea5" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyelerview123"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/gggg"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp" />
</RelativeLayout>