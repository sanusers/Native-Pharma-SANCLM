<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tp_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity.tourPlan.TourPlanActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_dark"
                android:backgroundTint="@color/text_dark"
                android:minHeight="?attr/actionBarSize"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <LinearLayout
                    android:id="@+id/backArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_6sdp">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/arrow_back_white"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:fontFamily="@font/satoshi_variable"
                    android:text="Tour Plan"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_7sdp"
                    tools:ignore="SpUsage" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appBar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_6sdp"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.35"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/_3sdp"
                app:contentPadding="@dimen/_6sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        tools:ignore="DuplicateIncludedIds">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/edittext_stroke"
                            android:backgroundTint="#EEEEEE"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/calendar_prev_button"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:paddingStart="@dimen/_12sdp"
                                android:paddingTop="@dimen/_6sdp"
                                android:paddingEnd="@dimen/_12sdp"
                                android:paddingBottom="@dimen/_6sdp"
                                android:src="@drawable/less_than_black"
                                app:tint="@color/black_45"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/monthYear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/satoshi_medium"
                                android:paddingTop="@dimen/_6sdp"
                                android:paddingBottom="@dimen/_6sdp"
                                android:text="Month Year"
                                android:textColor="@color/text_dark"
                                android:textSize="@dimen/_6sdp"
                                tools:ignore="SpUsage" />

                            <ImageView
                                android:id="@+id/calendar_next_button"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:paddingStart="@dimen/_12sdp"
                                android:paddingTop="@dimen/_6sdp"
                                android:paddingEnd="@dimen/_12sdp"
                                android:paddingBottom="@dimen/_6sdp"
                                android:src="@drawable/greater_than_black"
                                tools:ignore="ContentDescription" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tpStatusTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center|end"
                            android:fontFamily="@font/satoshi_variable"
                            android:text="Planning..."
                            android:textColor="@color/green_2"
                            android:textSize="@dimen/_5sdp"
                            tools:ignore="SpUsage" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/calendar_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/header"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/top_right_left_curve"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        tools:ignore="SpUsage">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/satoshi_medium"
                            android:gravity="center_horizontal"
                            android:text="Sun"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/_5sdp"
                            android:textStyle="bold"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/satoshi_medium"
                            android:gravity="center_horizontal"
                            android:text="Mon"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/_5sdp"
                            android:textStyle="bold"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/satoshi_medium"
                            android:gravity="center_horizontal"
                            android:text="Tue"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/_5sdp"
                            android:textStyle="bold"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/satoshi_medium"
                            android:gravity="center_horizontal"
                            android:text="Wed"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/_5sdp"
                            android:textStyle="bold"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/satoshi_medium"
                            android:gravity="center_horizontal"
                            android:text="Thu"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/_5sdp"
                            android:textStyle="bold"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/satoshi_medium"
                            android:gravity="center_horizontal"
                            android:text="Fri"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/_5sdp"
                            android:textStyle="bold"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/satoshi_medium"
                            android:gravity="center_horizontal"
                            android:text="Sat"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/_5sdp"
                            android:textStyle="bold"
                            tools:ignore="SpUsage" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/calendarRecView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/calendar_header"
                        android:layout_marginBottom="@dimen/_20sdp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_weight="0.65"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_3sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/summary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_toStartOf="@id/tv_sync"
                            android:fontFamily="@font/satoshi_medium"
                            android:text="Summary"
                            android:textColor="@color/text_dark_65"
                            android:textSize="@dimen/_7sdp"
                            android:textStyle="bold"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:id="@+id/tv_sync"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:background="@drawable/bg_light_pink_2"
                            android:drawablePadding="@dimen/_1sdp"
                            android:fontFamily="@font/satoshi_medium"
                            android:gravity="start|center"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:paddingVertical="@dimen/_3sdp"
                            android:text="@string/sync"
                            android:textAllCaps="false"
                            android:textColor="@color/pink"
                            android:textSize="@dimen/_6sdp"
                            app:drawableStartCompat="@drawable/baseline_sync_24"
                            tools:ignore="SpUsage" />

                        <LinearLayout
                            android:id="@+id/rejectionReasonLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/summary"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:visibility="gone"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/pink" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="@dimen/_3sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/satoshi_light"
                                    android:text="Rejected Reason"
                                    android:textColor="@color/pink"
                                    android:textSize="@dimen/_5sdp"
                                    android:textStyle="bold"
                                    tools:ignore="SpUsage" />

                                <TextView
                                    android:id="@+id/rejectedReasonTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_1sdp"
                                    android:fontFamily="@font/satoshi_medium"
                                    android:text="Reason"
                                    android:textColor="@color/text_dark"
                                    android:textSize="@dimen/_5sdp"
                                    android:textStyle="bold"
                                    tools:ignore="SpUsage" />

                            </LinearLayout>

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/summaryRecView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rejectionReasonLayout"
                            android:paddingBottom="@dimen/_5sdp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tpSendToApproval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/tp_btn_select_state"
                    android:fontFamily="@font/satoshi_variable"
                    android:gravity="center"
                    android:text="Send to approval"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_6sdp"
                    tools:ignore="SpUsage" />

            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/text_dark"
            android:visibility="gone" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:drawerLayoutCornerSize="0dp">

        <include
            android:id="@+id/tp_navigation"
            layout="@layout/tp_nav_drawer" />

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>