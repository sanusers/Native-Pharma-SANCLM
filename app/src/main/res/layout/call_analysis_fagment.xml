<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/_5sdp">

    <RelativeLayout
        android:id="@+id/call_analysis_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TextView
            android:id="@+id/text_call_analysis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/satoshi_medium"
            android:text="Call Analysis"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:src="@drawable/tab_dark_line"
                android:layout_margin="@dimen/_1sdp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_margin="@dimen/_1sdp"
                android:src="@drawable/tab_litte_line"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_margin="@dimen/_1sdp"
                android:src="@drawable/tab_litte_line"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/text_call_analysis">
            <LinearLayout
                android:id="@+id/recyelerview1"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_doc_child"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:background="@drawable/custom_background_green"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_doc_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:fontFamily="@font/satoshi_medium"
                        android:text="Docter calls"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_doc_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_name"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_gravity="top"
                            android:gravity="top"
                            android:fontFamily="@font/satoshi_medium"
                            android:text="111/150"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:visibility="visible" />


                        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_4sdp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_weight="1">

                            <ProgressBar
                                android:id="@+id/doc_progress_bar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="@dimen/_37sdp"
                                android:layout_height="@dimen/_37sdp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_3sdp"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="50"
                                android:progressDrawable="@drawable/progress_circular"
                                android:rotation="-90" />

                            <TextView
                                android:id="@+id/dcc_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="72%"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_7sdp" />
                        </FrameLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/ll_che_child"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:background="@drawable/custom_background_blue"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_che_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:fontFamily="@font/satoshi_medium"
                        android:text="Chemist calls"

                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_che_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_name"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_10sdp"

                            android:fontFamily="@font/satoshi_medium"
                            android:text="75/100"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:visibility="visible" />


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_4sdp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_weight="1">

                            <ProgressBar
                                android:id="@+id/che_progress_bar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="@dimen/_37sdp"
                                android:layout_height="@dimen/_37sdp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_3sdp"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="50"
                                android:progressDrawable="@drawable/progress_circular"
                                android:rotation="-90" />

                            <TextView
                                android:id="@+id/che_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="75%"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_7sdp" />
                        </FrameLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_stock_child"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:background="@drawable/custom_background_red"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_stock_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:fontFamily="@font/satoshi_medium"
                        android:text="Stockiest Calls"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_stock_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_name"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/satoshi_medium"
                            android:text="17/20"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:visibility="visible" />


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_4sdp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_weight="1">

                            <ProgressBar
                                android:id="@+id/stock_progress_bar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="@dimen/_37sdp"
                                android:layout_height="@dimen/_37sdp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_3sdp"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="50"
                                android:progressDrawable="@drawable/progress_circular"
                                android:rotation="-90" />

                            <TextView
                                android:id="@+id/stock_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="97%"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_7sdp" />
                        </FrameLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_unli_child"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:background="@drawable/custom_background_brown"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_unli_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:fontFamily="@font/satoshi_medium"
                        android:text="Unlistered Calls"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_unlist_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_name"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/satoshi_medium"
                            android:text="30/50"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:visibility="visible" />


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_4sdp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_gravity="right"
                            android:layout_weight="1">

                            <ProgressBar
                                android:id="@+id/unlist_progress_bar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="@dimen/_37sdp"
                                android:layout_height="@dimen/_37sdp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_3sdp"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="50"
                                android:progressDrawable="@drawable/progress_circular"
                                android:rotation="-90" />

                            <TextView
                                android:id="@+id/unlisted_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="60%"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_7sdp" />
                        </FrameLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_average_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/satoshi_medium"
            android:text="Average Doctors Calls"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/satoshi_medium"
            android:text="June 2023 - August 2023"
            android:textColor="@color/txt_lite_black"
            android:textSize="@dimen/_7sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/text_average_"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/custom_backround_layout"
            android:backgroundTint="@color/white">

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
