<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

       <androidx.fragment.app.FragmentContainerView
           android:id="@+id/map"
           android:name="com.google.android.gms.maps.SupportMapFragment"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.0"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintVertical_bias="1.0"
           tools:context=".activity.map.MapsActivity" />
    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:background="@color/dark_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:cropToPadding="true"
        android:gravity="center"
        android:src="@drawable/iv_back"
        app:layout_constraintBottom_toBottomOf="@id/view_top"
        app:layout_constraintRight_toLeftOf="@id/tag_selection"
        app:layout_constraintStart_toStartOf="@id/view_top"
        app:layout_constraintTop_toTopOf="@id/view_top"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tag_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:fontFamily="@font/satoshi_bold"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        android:text="@string/txt_tagging"
        android:textColor="@color/white"
        android:textSize="@dimen/_7sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/view_top"
        app:layout_constraintLeft_toRightOf="@id/iv_back"
        app:layout_constraintRight_toLeftOf="@id/constraint_mid"
        app:layout_constraintTop_toTopOf="@id/view_top"
        tools:ignore="TextSizeCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/view_top"
        app:layout_constraintLeft_toRightOf="@id/tag_selection"
        app:layout_constraintTop_toTopOf="@id/view_top">

        <View
            android:id="@+id/view_one"
            android:layout_width="0.5dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:background="@color/white"
            android:gravity="center"
            android:paddingVertical="@dimen/_2sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tag_tv_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/bg_light_purple"
            android:fontFamily="@font/satoshi_medium"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:text="@string/txt_doctor"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/view_one"
            app:layout_constraintLeft_toRightOf="@id/view_one"
            app:layout_constraintRight_toLeftOf="@id/tag_tv_chemist"
            app:layout_constraintTop_toTopOf="@id/view_one" />

        <TextView
            android:id="@+id/tag_tv_chemist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_4sdp"
            android:fontFamily="@font/satoshi_medium"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:text="@string/txt_chemist"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/view_one"
            app:layout_constraintLeft_toRightOf="@id/tag_tv_doctor"
            app:layout_constraintRight_toLeftOf="@id/tag_tv_stockist"
            app:layout_constraintTop_toTopOf="@id/view_one" />

        <TextView
            android:id="@+id/tag_tv_stockist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_4sdp"
            android:fontFamily="@font/satoshi_medium"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:text="@string/txt_stockist"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/view_one"
            app:layout_constraintLeft_toRightOf="@id/tag_tv_chemist"
            app:layout_constraintRight_toLeftOf="@id/tag_tv_undr"
            app:layout_constraintTop_toTopOf="@id/view_one" />

        <TextView
            android:id="@+id/tag_tv_undr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:fontFamily="@font/satoshi_medium"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:text="@string/txt_undr"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/view_one"
            app:layout_constraintLeft_toRightOf="@id/tag_tv_stockist"
            app:layout_constraintRight_toLeftOf="@id/view_two"
            app:layout_constraintTop_toTopOf="@id/view_one" />

        <View
            android:id="@+id/view_two"
            android:layout_width="0.5dp"
            android:layout_height="@dimen/_25sdp"
           android:layout_marginHorizontal="@dimen/_14sdp"
            android:background="@color/white"
            android:gravity="center"
            android:paddingVertical="@dimen/_2sdp"
            app:layout_constraintBottom_toBottomOf="@id/view_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tag_tv_undr"
            app:layout_constraintTop_toTopOf="@id/view_one" />
    </androidx.constraintlayout.widget.ConstraintLayout>

   <!--   <ImageView
          android:id="@+id/img_tag_map"
          android:layout_width="120dp"
          android:layout_height="50dp"
          android:layout_marginHorizontal="@dimen/_8sdp"
          android:src="@drawable/img_btn"
          app:layout_constraintBottom_toBottomOf="@id/view_top"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintLeft_toRightOf="@id/constraint_mid"
          app:layout_constraintTop_toTopOf="@id/view_top" />-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_tag"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:background="@drawable/bg_pink"
        android:drawableStart="@drawable/img_tag"
        android:fontFamily="@font/satoshi_medium"
        android:gravity="center"
        android:paddingStart="20dp"
        android:text="@string/txt_add_tag"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/view_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/constraint_mid"
        app:layout_constraintTop_toTopOf="@id/view_top"
        tools:ignore="RtlSymmetry,TextContrastCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />


    <TextView
        android:id="@+id/tv_tagged_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/satoshi_medium"
        android:gravity="start|center"
        android:paddingVertical="@dimen/_4sdp"
        android:paddingHorizontal="@dimen/_14sdp"
        android:drawablePadding="@dimen/_2sdp"
        android:text="No. 569, mount road, sathya murthy nagar, Teynampet, Chennai, Tamilnadu 600 018, India"
        android:textColor="@color/dark_purple"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/view_top"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
        app:drawableStartCompat="@drawable/img_marker_purple" />


    <ImageView
        android:id="@+id/img_refresh_map"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/_4sdp"
        android:background="@drawable/bg_purple"
        android:cropToPadding="true"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/img_refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img_cur_loc"
        app:layout_constraintTop_toBottomOf="@id/tv_tagged_address"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/img_cur_loc"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/_4sdp"
        android:background="@drawable/bg_purple"
        android:cropToPadding="true"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/img_curr_loc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/rv_list"
        app:layout_constraintTop_toBottomOf="@id/tv_tagged_address"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="340dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/img_rv_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_top" />

    <ImageView
        android:id="@+id/img_rv_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:background="@drawable/bg_white"
        android:cropToPadding="true"
        android:padding="@dimen/_5sdp"
        android:visibility="visible"
        android:src="@drawable/right_arrow_map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/img_cur_loc"
        app:layout_constraintTop_toBottomOf="@id/img_cur_loc"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/img_rv_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:background="@drawable/bg_white"
        android:cropToPadding="true"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/left_arrow_map"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_cur_loc"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>