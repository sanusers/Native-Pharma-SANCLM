<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/str_app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SANCLM"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <activity
        android:name=".Activities.SplashScreen"
        android:exported="true"
        android:screenOrientation="landscape" />

        <activity
            android:name=".Activities.Map.CallSelection.DCRSelectionList"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:screenOrientation="landscape" />

        <activity
            android:name=".Activities.Profile.CustomerProfile"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:screenOrientation="landscape" />

        <activity
            android:name=".Activities.Call.DCRCallActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:screenOrientation="landscape"/>

        <activity
            android:name=".Activities.tourPlan.TourPlanActivity"
            android:exported="false"
            android:screenOrientation="landscape"/>

        <activity
            android:name=".Activities.masterSync.MasterSyncActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.login.LoginActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.setting.SettingsActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.MainActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.HomeScreen.HomeDashBoard"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>